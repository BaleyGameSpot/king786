<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="postSplashScreenTheme">@style/AppCompatTheme</item>
    </style>

    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColorSecondary">@android:color/white</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/appThemeColor_1</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/appThemeColor_Dark_1</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/appThemeColor_2</item>


        <item name="colorControlNormal">@color/appThemeColor_2</item>
        <item name="colorControlActivated">@color/appThemeColor_1</item>

        <!--<item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>-->
        <!--<item name="actionOverflowButtonStyle">@style/OverflowMenuButton</item>-->
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenu</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:itemBackground">@color/white</item>


        <item name="android:fontFamily">@font/app_font_regular</item>

        <item name="buttonBarButtonStyle">@style/appBTStyle</item>
    </style>

    <style name="appBTStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- <style name="OverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
         <item name="android:src">@drawable/ic_menu_overflow</item>
     </style>-->

    <style name="bg_materialEditText" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/editBox_primary</item>
        <item name="colorPrimaryDark">@color/editBox_primary_dark</item>
        <item name="colorAccent">@color/editBox_accent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FBtheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="FBDialogtheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="ImageSourceDialogStyle">
        <item name="android:windowAnimationStyle">@style/ImageSourceDialogAnimStyle</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ImageSourceDialogAnimStyle">
        <item name="android:windowEnterAnimation">@anim/slide_up_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down_anim</item>
    </style>

    <!--<style name="Theme.Rating" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/appThemeColor_2</item>
        <item name="colorControlActivated">@color/appThemeColor_1</item>
    </style>-->

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="My_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>


    <style name="Theme_Dialog1" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="StackedAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/StackedButtonBarButtonStyle</item>
    </style>

    <style name="StackedButtonBarButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="OverflowMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4.0dip</item>

        <item name="android:src">@drawable/ic_menu_overflow</item>
        <item name="android:popupBackground">@color/appThemeColor_1</item>

    </style>

    <style name="ThemeSpinner">
        <!-- Color when pressed -->
        <item name="colorAccent">@color/appThemeColor_1</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <style name="theme_advertise_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">#fff</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/appThemeColor_2</item>
        <item name="colorControlActivated">@color/appThemeColor_1</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="noAnimTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="CountryPickerLightStyle">
        <item name="countryNameColor">@color/countryNameColorOnLight</item>
        <item name="dialCodeColor">@color/dialCodeColorOnLight</item>
        <item name="rowBackgroundColor">@color/rowBackgroundColorLight</item>
        <item name="rowBackgroundSelectedColor">@color/rowBackgroundSelectedColorLight</item>
    </style>

    <style name="BaseTextStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#de000000</item>
    </style>

    <style name="TextStyle" parent="BaseTextStyle"></style>

    <style name="BaseCountryTextStyle" parent="TextStyle">
        <item name="android:textColor">?countryNameColor</item>
    </style>

    <style name="CountryTextStyle" parent="BaseCountryTextStyle">
        <item name="android:textColor">?countryNameColor</item>
    </style>

    <style name="BaseDialCodeTextStyle" parent="TextStyle">
        <item name="android:textColor">?dialCodeColor</item>
    </style>

    <style name="DialCodeTextStyle" parent="BaseDialCodeTextStyle">

    </style>

    <!--Bottom Sheet Dialog Style-->
    <style name="BottomSheetDialog" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!--Background with corner-->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">@dimen/_560sdp</item>
    </style>
</resources>
