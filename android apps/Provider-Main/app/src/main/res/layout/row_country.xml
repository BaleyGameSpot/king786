<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_rowcountry"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?rowBackgroundColor"
    android:gravity="center_vertical">

    <com.view.SelectableRoundedImageView
        android:id="@+id/imageview_flag"
        android:layout_width="@dimen/_31sdp"
        android:layout_height="@dimen/_21sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_9sdp"
        android:layout_marginBottom="@dimen/_9sdp"
        android:scaleType="fitXY"
        app:sriv_border_color="#30000000"
        app:sriv_border_width="1dp" />

    <TextView
        android:id="@+id/textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignTop="@+id/imageview_flag"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_toStartOf="@+id/textview_code"
        android:layout_toEndOf="@+id/imageview_flag"
        android:ellipsize="end"
        android:gravity="start"
        android:textAlignment="viewStart"
        android:textAppearance="@style/CountryTextStyle"
        tools:text="Country Sample" />

    <TextView
        android:id="@+id/textview_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageview_flag"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_12sdp"
        android:textAppearance="@style/DialCodeTextStyle"
        android:textDirection="ltr"
        tools:text="+123" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/gray" />
</RelativeLayout>