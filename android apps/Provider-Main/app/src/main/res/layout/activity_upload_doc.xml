<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/design_toolbar_general" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.view.MTextView
                    android:id="@+id/helpInfoTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:textColor="@color/text23Pro_Dark"
                    android:textSize="@dimen/_15ssp"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="Select document" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <ImageView
                        android:id="@+id/dummyInfoCardImgView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_card_documents" />

                    <ImageView
                        android:id="@+id/imgeselectview"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_upload_doc_arrow" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/editArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_minus15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/wallet_border"
                    android:backgroundTint="@color/appThemeColor_1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.view.MTextView

                        android:id="@+id/editTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingStart="@dimen/_15sdp"

                        android:paddingTop="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        app:customTypeFace="@string/system_medium"
                        tools:text="edit" />

                    <View
                        android:id="@+id/editView"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />

                    <com.view.MTextView
                        android:id="@+id/viewTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:includeFontPadding="false"

                        android:paddingStart="@dimen/_15sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        app:customTypeFace="@string/system_medium"
                        tools:text="view" />

                </LinearLayout>


            </LinearLayout>


            <FrameLayout
                android:id="@+id/expDateSelectArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/card_view_23_gray_shadow">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_15sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/expBoxLBL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:maxLines="2"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_regular"
                            tools:text="Expiry Date" />

                        <com.view.MTextView
                            android:id="@+id/expBoxTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:gravity="start"
                            android:maxLines="2"
                            android:textColor="@color/textSub23Pro_gray"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_regular"
                            tools:text="02 Mar, 2039" />


                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/selectyear_layout"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/card_view_23_white_bg_black_border_6dp"
                        android:minHeight="@dimen/_30sdp">

                        <ImageView
                            android:id="@+id/calanderView"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_9sdp"
                            app:srcCompat="@drawable/ic_calendar"
                            app:tint="@color/appThemeColor_1" />

                        <com.view.MTextView
                            android:id="@+id/expBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:layout_toStartOf="@+id/arrow"
                            android:layout_toEndOf="@+id/calanderView"
                            android:gravity="center"
                            android:maxLines="2"
                            android:textColor="@color/textSub23Pro_gray"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_regular"
                            tools:text="Select" />

                        <ImageView
                            android:id="@+id/arrow"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:gravity="center"
                            android:scaleX="1.4"
                            android:scaleY="1.4"
                            android:src="@mipmap/ic_arrow_down"
                            app:tint="@color/textSub23Pro_gray" />
                    </RelativeLayout>


                </RelativeLayout>

            </FrameLayout>
        </LinearLayout>


        <com.view.MTextView

            android:id="@+id/noteTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:gravity="center|start"
            android:includeFontPadding="false"
            android:textSize="@dimen/_14ssp"
            app:customTypeFace="@string/system_light"
            tools:text="" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">


            <include
                android:id="@+id/btn_type2"
                layout="@layout/btn_type_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_btn_height"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp" />

        </LinearLayout>
    </LinearLayout>
</layout>