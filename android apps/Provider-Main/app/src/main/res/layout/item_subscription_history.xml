<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_11sdp"
        android:background="@drawable/card_view_23_white_shadow"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                    <com.view.MTextView
                        android:id="@+id/tvPlanTypeTitleTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center|top"
                        android:layout_weight="0.5"
                        android:gravity="start|center|top"
                        android:maxLines="2"
                        android:minLines="1"
                        android:padding="2sp"
                        android:textAlignment="viewStart"
                        android:textColor="#1c1c1c"
                        android:textSize="@dimen/txt_size_12"
                        app:customTypeFace="@string/system_medium" />

                    <com.view.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="@dimen/txt_size_14"
                        app:customTypeFace="@string/system_bold" />

                    <com.view.MTextView
                        android:id="@+id/tvPlanTypeValTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center|top"
                        android:layout_weight="0.6"
                        android:gravity="start|center|top"
                        android:maxLines="2"
                        android:minLines="1"
                        android:padding="2sp"
                        android:textAlignment="viewStart"
                        android:textColor="#727272"
                        android:textSize="@dimen/txt_size_12"
                        app:customTypeFace="@string/system_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                    <com.view.MTextView
                        android:id="@+id/tvPlanDurationTitleTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center|top"
                        android:layout_weight="0.5"
                        android:gravity="start|center|top"
                        android:maxLines="2"
                        android:minLines="1"
                        android:padding="2sp"
                        android:textAlignment="viewStart"
                        android:textColor="#1c1c1c"
                        android:textSize="@dimen/txt_size_12"
                        app:customTypeFace="@string/system_medium" />

                    <com.view.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="@dimen/txt_size_14"
                        app:customTypeFace="@string/system_bold" />

                    <com.view.MTextView
                        android:id="@+id/tvPlanDurationValTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center|top"
                        android:layout_weight="0.6"
                        android:gravity="start|center|top"
                        android:maxLines="2"
                        android:minLines="1"
                        android:padding="2sp"
                        android:textAlignment="viewStart"
                        android:textColor="#727272"
                        android:textSize="@dimen/txt_size_12"
                        app:customTypeFace="@string/system_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                    <com.view.MTextView
                        android:id="@+id/tvPlanPriceTitleTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center|top"
                        android:layout_weight="0.5"
                        android:gravity="start|center|top"
                        android:maxLines="2"
                        android:minLines="1"
                        android:padding="2sp"
                        android:textAlignment="viewStart"
                        android:textColor="#1c1c1c"
                        android:textSize="@dimen/txt_size_12"
                        app:customTypeFace="@string/system_medium" />

                    <com.view.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="@dimen/txt_size_14"
                        app:customTypeFace="@string/system_bold" />

                    <com.view.MTextView
                        android:id="@+id/tvPlanPriceValTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center|top"
                        android:layout_weight="0.6"
                        android:gravity="start|center|top"
                        android:maxLines="2"
                        android:minLines="1"
                        android:padding="2sp"
                        android:textAlignment="viewStart"
                        android:textColor="#727272"
                        android:textSize="@dimen/txt_size_12"
                        app:customTypeFace="@string/system_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                    <com.view.MTextView
                        android:id="@+id/tvSubscribOnDateTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center|top"
                        android:layout_weight="0.5"
                        android:gravity="start|center|top"
                        android:maxLines="2"
                        android:minLines="1"
                        android:padding="2sp"
                        android:textAlignment="viewStart"
                        android:textColor="#1c1c1c"
                        android:textSize="@dimen/txt_size_12"
                        app:customTypeFace="@string/system_medium" />

                    <com.view.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="@dimen/txt_size_14"
                        app:customTypeFace="@string/system_bold" />

                    <com.view.MTextView
                        android:id="@+id/tvSubscribOnDateValTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center|top"
                        android:layout_weight="0.6"
                        android:gravity="start|center|top"
                        android:maxLines="2"
                        android:minLines="1"
                        android:padding="2sp"
                        android:textAlignment="viewStart"
                        android:textColor="#727272"
                        android:textSize="@dimen/txt_size_12"
                        app:customTypeFace="@string/system_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <com.view.MTextView
                        android:id="@+id/tvExpireOnDateTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center|top"
                        android:layout_weight="0.5"
                        android:gravity="start|center|top"
                        android:maxLines="2"
                        android:minLines="1"
                        android:padding="2sp"
                        android:textAlignment="viewStart"
                        android:textColor="#1c1c1c"
                        android:textSize="@dimen/txt_size_12"
                        app:customTypeFace="@string/system_medium" />

                    <com.view.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="@dimen/txt_size_14"
                        app:customTypeFace="@string/system_bold" />

                    <com.view.MTextView
                        android:id="@+id/tvExpireOnDateValTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center|top"
                        android:layout_weight="0.6"
                        android:gravity="start|center|top"
                        android:maxLines="2"
                        android:minLines="1"
                        android:padding="2sp"
                        android:textAlignment="viewStart"
                        android:textColor="#727272"
                        android:textSize="@dimen/txt_size_12"
                        app:customTypeFace="@string/system_regular" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/packageArea"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@color/appThemeColor_70"
                android:gravity="center"
                android:orientation="vertical">

                <com.view.MTextView
                    android:id="@+id/tvLeftPackageDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="2"
                    android:minLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_18"
                    app:customTypeFace="@string/system_bold" />

                <com.view.MTextView
                    android:id="@+id/tvDaysTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_14"
                    app:customTypeFace="@string/system_bold" />

                <com.view.MTextView
                    android:id="@+id/tvDaysTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:minLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_10"
                    app:customTypeFace="@string/system_bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/satusArea"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_btn_height2"
            android:background="@color/appThemeColor_1"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.view.MTextView
                    android:id="@+id/subscribedStatusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="8dp"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_14"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:customTypeFace="@string/system_light" />

                <com.view.MTextView
                    android:id="@+id/subscribedStatus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_18"
                    android:textStyle="bold"
                    app:customTypeFace="@string/system_medium" />
            </LinearLayout>

            <com.view.MTextView
                android:id="@+id/tvPackageDetail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center"
                android:layout_marginEnd="8dp"
                android:gravity="end|center"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_14"
                android:visibility="gone"
                app:customTypeFace="@string/system_bold" />
        </LinearLayout>
    </LinearLayout>
</layout>