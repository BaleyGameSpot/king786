<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:visibility="gone"
            tools:visibility="gone">


            <com.view.WKWebView
                android:id="@+id/previewWV"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/closePreview"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:srcCompat="@drawable/ic_close_round" />

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        </RelativeLayout>

        <include layout="@layout/design_toolbar_general" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/profile_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/ic_circular_shape"
                    android:backgroundTint="@color/appThemeColor_1"
                    android:padding="@dimen/_12sdp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_gift_card" />

                <com.view.MTextView
                    android:id="@+id/designThemeHTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/text23Pro_Dark"
                    android:textSize="@dimen/_14sdp"
                    app:customTypeFace="@string/system_bold"
                    tools:text="Select EGV Design Theme" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/SendGiftListRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@color/transparent_full"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    app:layoutManager="com.act.giftcard.CenterLayoutManager" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_view_23_gray_shadow"
                        android:orientation="vertical"
                        android:padding="@dimen/_15ssp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/amountTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="Gift Card Amount" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:background="@drawable/card_view_23_white_shadow"
                                android:orientation="horizontal"
                                android:weightSum="5">

                                <com.view.editBox.MaterialEditText
                                    android:id="@+id/amountBox"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_11sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginEnd="@dimen/_11sdp"
                                    android:layout_marginBottom="@dimen/_3sdp"
                                    android:layout_weight="4"
                                    android:inputType="number"
                                    android:textColor="@color/text23Pro_Light"
                                    android:textSize="@dimen/_12ssp"
                                    app:customTypeFace="@string/system_regular"
                                    app:met_hideUnderline="true"
                                    tools:hint="Enter Amount" />

                                <com.view.MTextView
                                    android:id="@+id/amountCurrency"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/right_radius"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12ssp"
                                    tools:text="USD" />
                            </LinearLayout>

                            <com.view.MTextView
                                android:id="@+id/amountBoxErrorView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:gravity="center"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_9sdp"
                                android:visibility="gone"
                                tools:text="This field is required"
                                tools:visibility="visible" />

                            <com.view.MTextView
                                android:id="@+id/AmountHintTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:padding="@dimen/_1sdp"
                                android:textAlignment="viewStart"
                                android:textColorHint="@color/text23Pro_Light"
                                android:textSize="@dimen/_9sdp"
                                app:customTypeFace="@string/system_regular"
                                tools:hint="The maximum amount is $1,000.00" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/PersonalMsgHTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:background="@null"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="Personal Message" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_63sdp"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:background="@drawable/card_view_23_white_shadow">

                                <com.view.editBox.MaterialEditText
                                    android:id="@+id/personalMsgBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_11sdp"
                                    android:layout_marginEnd="@dimen/_11sdp"
                                    android:gravity="start"
                                    android:textColor="@color/text23Pro_Light"
                                    android:textSize="@dimen/_12ssp"
                                    app:customTypeFace="@string/system_light"
                                    app:met_hideUnderline="true"
                                    tools:hint="Enter Message" />

                            </LinearLayout>

                            <com.view.MTextView
                                android:id="@+id/personalMsgBoxErrorView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:gravity="center"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_9sdp"
                                android:visibility="gone"
                                tools:text="This field is required"
                                tools:visibility="visible" />

                        </LinearLayout>
                    </LinearLayout>

                    <com.view.MTextView
                        android:id="@+id/receiverDetailsHTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/_13sdp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="Receiver Details" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@drawable/card_view_23_gray_shadow"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_15ssp">

                        <com.view.MTextView
                            android:id="@+id/ReceiverNamehtx"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="Receiver's Name" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:background="@drawable/card_view_23_white_shadow">

                            <com.view.editBox.MaterialEditText
                                android:id="@+id/receiverNameEditBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_11sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_11sdp"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:textColor="@color/text23Pro_Light"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_regular"
                                app:met_hideUnderline="true"
                                tools:hint="Enter Name"
                                tools:ignore="TooDeepLayout" />
                        </LinearLayout>

                        <com.view.MTextView
                            android:id="@+id/receiverNameEditBoxErrorView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:gravity="start"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_9sdp"
                            android:visibility="gone"
                            tools:text="This field is required"
                            tools:visibility="visible" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/ReceiverEmailhtx"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="Receiver's Email" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:background="@drawable/card_view_23_white_shadow">

                                <com.view.editBox.MaterialEditText
                                    android:id="@+id/receiverEmailEditBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_11sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginEnd="@dimen/_11sdp"
                                    android:layout_marginBottom="@dimen/_3sdp"
                                    android:imeOptions="actionNext"
                                    android:singleLine="true"
                                    android:textColor="@color/text23Pro_Light"
                                    android:textSize="@dimen/_12ssp"
                                    app:customTypeFace="@string/system_regular"
                                    app:met_hideUnderline="true"
                                    tools:hint="Enter Email" />
                            </LinearLayout>

                            <com.view.MTextView
                                android:id="@+id/receiverEmailEditBoxErrorView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:gravity="start"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_9sdp"
                                android:visibility="gone"
                                tools:text="This field is required"
                                tools:visibility="visible" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/mobileBoxHTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="User phone" />

                            <LinearLayout
                                android:id="@+id/mobileNoArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:background="@drawable/card_view_23_white_shadow"
                                android:gravity="center"
                                android:paddingStart="@dimen/_11sdp"
                                android:paddingEnd="@dimen/_11sdp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="@dimen/_7sdp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:id="@+id/countryArea"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/countryImg"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        app:srcCompat="@drawable/ic_card_default"
                                        tools:ignore="TooDeepLayout" />

                                    <com.view.MTextView
                                        android:id="@+id/countryCodeTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_3sdp"
                                        android:includeFontPadding="false"
                                        android:textAlignment="viewStart"
                                        android:textSize="@dimen/_12ssp"
                                        app:customTypeFace="@string/system_regular"
                                        tools:text="+91" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/countryDropImg"
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:layout_marginStart="@dimen/_6sdp"
                                        android:layout_marginTop="@dimen/_1sdp"
                                        app:srcCompat="@drawable/ic_down_arrow_23"
                                        app:tint="@color/text23Pro_Light" />
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="@dimen/_20ssp"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:background="@color/text23Pro_Light" />

                                <com.view.editBox.MaterialEditText
                                    android:id="@+id/mobileBox"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginBottom="@dimen/_3sdp"
                                    android:layout_weight="0.70"
                                    android:imeOptions="actionDone"
                                    android:inputType="number"
                                    android:singleLine="true"
                                    android:textColor="@color/text23Pro_Light"
                                    android:textSize="@dimen/_12ssp"
                                    app:customTypeFace="@string/system_regular"
                                    app:met_hideUnderline="true"
                                    tools:hint="Enter phone" />
                            </LinearLayout>

                            <com.view.MTextView
                                android:id="@+id/mobileBoxErrorView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:gravity="start"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_9sdp"
                                android:visibility="gone"
                                tools:text="This field is required"
                                tools:visibility="visible" />

                        </LinearLayout>
                    </LinearLayout>

                    <com.view.MTextView
                        android:id="@+id/PreviewGiftBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/border_black_line"
                        android:gravity="center"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_9sdp"
                        android:paddingEnd="@dimen/_11sdp"
                        android:paddingBottom="@dimen/_9sdp"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="Preview Gift Card" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="@color/view23ProBG"
                            android:minWidth="@dimen/_20sdp" />

                        <com.view.MTextView
                            android:id="@+id/PaymentHTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:gravity="center"
                            android:textColor="#8B8B8B"
                            android:textSize="@dimen/_12sdp"
                            app:customTypeFace="@string/system_medium"
                            tools:text="Proceed to Payment" />

                        <View
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="@color/view23ProBG"
                            android:minWidth="@dimen/_20sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.view.MTextView
                                android:id="@+id/PayAmountHTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_bold"
                                tools:text="Pay Amount :" />

                            <com.view.MTextView
                                android:id="@+id/PayAmountHTxt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_bold"
                                tools:text="-- " />
                        </LinearLayout>

                        <com.view.MTextView
                            android:id="@+id/termsTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:gravity="center"
                            android:textColor="@color/textSub23Pro_gray"
                            android:textSize="@dimen/_10ssp"
                            app:customTypeFace="@string/system_regular"
                            tools:text="terms and privacy policy" />

                        <include
                            android:id="@+id/payNowBtn"
                            layout="@layout/btn_type_1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/all_btn_height"
                            android:layout_marginTop="@dimen/_15sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>