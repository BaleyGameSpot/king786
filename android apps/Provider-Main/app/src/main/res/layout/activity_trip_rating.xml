<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9F3F3F3"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/design_toolbar_general"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/mapArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D9F3F3F3"
            android:clickable="false">

            <fragment
                android:id="@+id/mapV2"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                tools:ignore="FragmentTagUsage"
                tools:layout="@layout/custom_tab_prj" />
        </RelativeLayout>

        <com.view.MTextView
            android:id="@+id/pageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/appThemeColor_1"
            android:padding="@dimen/_5sdp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:visibility="visible"
            app:customTypeFace="@string/system_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/pageTitle"
            android:background="@color/gray"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/ratingArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/card_view_23_white_shadow"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <com.view.MTextView
                    android:id="@+id/rateTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="15dp"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="@color/appThemeColor_1"
                    android:textSize="@dimen/txt_size_18"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/imagelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="@dimen/_8sdp">

                        <com.view.SelectableRoundedImageView
                            android:id="@+id/userImgView"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@mipmap/ic_no_pic_user"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <com.view.MTextView
                    android:id="@+id/nameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imagelayout"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="NAME" />

                <com.view.simpleratingbar.SimpleRatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nameTxt"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:backgroundTint="@color/gray_holo_light"
                    app:SRB_fillColor="#fab00a"
                    app:SRB_starBackgroundColor="@color/gray_holo_light"
                    app:SRB_starSize="40sp"
                    app:SRB_stepSize="0.5" />

                <RelativeLayout
                    android:id="@+id/commentArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ratingBar"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/card_view_23_white_shadow">

                    <com.view.editBox.MaterialEditText
                        android:id="@+id/commentBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:padding="@dimen/_5sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:customTypeFace="@string/system_light"
                        app:met_hideUnderline="true"
                        tools:ignore="SpeakableTextPresentCheck" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/btnArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/commentArea"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp">

                    <include
                        android:id="@+id/btn_type2"
                        layout="@layout/btn_type_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_btn_height" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
