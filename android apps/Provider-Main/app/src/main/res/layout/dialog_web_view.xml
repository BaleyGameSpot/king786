<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/closeImg"
                android:layout_centerInParent="true"
                android:background="@drawable/top_curve_card">

                <com.view.anim.loader.AVLoadingIndicatorView
                    android:id="@+id/loaderView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@android:color/transparent"
                    android:visibility="visible"
                    app:indicator="BallPulse"
                    app:indicator_color="@color/black" />

                <com.view.WKWebView
                    android:id="@+id/webViewDialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@color/white"
                    android:layout_below="@+id/loaderView"/>
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/closeImg"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/white"
                android:gravity="end"
                android:padding="@dimen/_10sdp"
                android:tint="@color/gray"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_close_button" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>