<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/design_toolbar_general" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnBiddingService"
            android:layout_below="@id/toolbar_include">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_15ssp"
                            android:background="@drawable/card_view_23_white_shadow"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_11sdp"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingEnd="@dimen/_7sdp"
                            android:paddingBottom="@dimen/_7sdp">

                            <com.view.MTextView
                                android:id="@+id/workLocTitleTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_bold"
                                tools:text="@string/app_name" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.view.MTextView
                                    android:id="@+id/addressTxt"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:maxLines="3"
                                    android:minHeight="@dimen/_15sdp"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/commonText_Dark"
                                    android:textSize="@dimen/_11ssp"
                                    app:customTypeFace="@string/system_medium"
                                    tools:text=" sdasdfjvdgdfgfgdfgdfggdfd fgdfgdfgdfgdfgdfgd fgdfgfgfgfggdfgdfgjhdfjghvc dfgsdfbhbgfjhggbg jhdfjghvbfhbgdjhfbggfbhgdfbghgjdfgjbdbghfbgdfbghcvbxjcbhvxcbhvxbhcv" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/editLocation"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="bottom"
                                    app:srcCompat="@drawable/ic_location_edit" />
                            </LinearLayout>
                        </LinearLayout>

                        <com.view.MTextView
                            android:id="@+id/introTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center|start"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_11ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="Select category below to add services you are going to provide" />
                    </LinearLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/introTxt"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/searchView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@drawable/search_shape"
                            android:backgroundTint="@color/imageCircleBg23Pro_Light"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp"
                            tools:ignore="UselessParent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:clickable="false"
                                app:srcCompat="@drawable/ic_search_23"
                                app:tint="@color/black" />

                            <EditText
                                android:id="@+id/searchTxtView"
                                layout="@layout/editbox_form_design"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_9sdp"
                                android:layout_weight="1"
                                android:background="@drawable/search_shape"
                                android:backgroundTint="@color/imageCircleBg23Pro_Light"
                                android:includeFontPadding="false"
                                android:singleLine="true"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Dark"
                                android:textColorHint="@color/text23Pro_Light"
                                android:textSize="@dimen/_12ssp"
                                tools:ignore="Autofill,LabelFor,TextFields" />

                            <FrameLayout
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/imageCancel"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@mipmap/ic_cancel_cab_request"
                                    app:tint="@color/text23Pro_Dark" />

                                <com.view.anim.loader.AVLoadingIndicatorView
                                    android:id="@+id/loaderView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@android:color/transparent"
                                    android:visibility="gone"
                                    app:indicator="BallPulse"
                                    app:indicator_color="@color/gray" />
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <com.view.MTextView
                        android:id="@+id/noResTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="2"
                        android:padding="10dp"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_16"
                        android:visibility="gone" />
                </LinearLayout>

                <com.view.pinnedListView.PinnedSectionListView
                    android:id="@+id/category_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:divider="#f1f1f1"
                    android:dividerHeight="0dp"
                    android:footerDividersEnabled="false"
                    android:headerDividersEnabled="false"
                    android:nestedScrollingEnabled="true" />
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <include
            android:id="@+id/btnBiddingService"
            layout="@layout/btn_type_1"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp" />

        <ProgressBar
            android:id="@+id/loading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <com.view.ErrorView
            android:id="@+id/errorView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </RelativeLayout>
</layout>