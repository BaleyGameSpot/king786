<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/maskImageUploadArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cancelImg"
                android:layout_width="@dimen/_37sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_gravity="center"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_close_new" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/card_view_23_white_line_flat_1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/imageArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iamage_source"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/circle_shape"
                        android:padding="@dimen/_15sdp"
                        app:srcCompat="@drawable/ic_profile_with_mask" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/card_view_23_gray_shadow"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/titileTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_bold"
                            tools:text="Title Text" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/capacityTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fitsSystemWindows="true"
                                android:includeFontPadding="false"
                                android:textColor="@color/Red_23Pro"
                                android:textSize="@dimen/_9ssp"
                                android:visibility="visible"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="@string/app_name" />


                            <com.view.MTextView
                                android:id="@+id/capacityTxt1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fitsSystemWindows="true"
                                android:includeFontPadding="false"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_9ssp"
                                android:visibility="visible"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="@string/app_name" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/uploadArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:background="@color/view23ProBG" />

                        <LinearLayout
                            android:id="@+id/mCardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/uploadTitleTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_9sdp"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="visible"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="@string/app_name" />


                            <LinearLayout
                                android:id="@+id/uploadImgArea"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/common_dotted_line"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_15sdp"
                                android:visibility="visible">


                                <FrameLayout
                                    android:id="@+id/frame_container"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/camImgVIew"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_cam" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ic_add"
                                        android:layout_width="@dimen/_46sdp"
                                        android:layout_height="@dimen/_46sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        app:srcCompat="@drawable/ic_add_circle" />
                                </FrameLayout>


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/uploadImgVIew"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:adjustViewBounds="true" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/clearImg"
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:layout_alignParentTop="true"
                                        android:layout_gravity="end"
                                        android:layout_marginStart="@dimen/_minus10sdp"
                                        android:layout_toEndOf="@+id/uploadImgVIew"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:onClick="removeImage"
                                        app:srcCompat="@drawable/ic_close_new"
                                        tools:ignore="UsingOnClickInXml" />
                                </RelativeLayout>


                            </LinearLayout>
                        </LinearLayout>

                        <com.view.MTextView
                            android:id="@+id/imageUploadNoteTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:fitsSystemWindows="true"
                            android:includeFontPadding="false"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="visible"
                            app:customTypeFace="@string/system_regular"
                            tools:text="@string/app_name" />
                    </LinearLayout>

                    <include
                        android:id="@+id/btn_type2"
                        layout="@layout/btn_type_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>