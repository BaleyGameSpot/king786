<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/bannerArea"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@color/light_transparent" />

    <View
        android:id="@+id/itemTaskArea"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/bannerArea"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/shimmershape" />


    <View
        android:id="@+id/itemNameArea"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@+id/itemTaskArea"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/shimmershape" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemNameArea"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/shimmershape"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">


        <View
            android:id="@+id/itemTask"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/shimmershape_dark" />

        <View
            android:id="@+id/itemBudget"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/itemTask"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shimmershape_dark" />

        <View
            android:id="@+id/itemDetail"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/itemBudget"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shimmershape_dark" />

        <View
            android:id="@+id/itemDesc"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/itemDetail"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shimmershape_dark" />

        <View
            android:id="@+id/itemMakeOffer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/itemDesc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/shimmershape_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/itemMakeOffer"
            android:layout_marginTop="@dimen/_15sdp">

            <View
                android:id="@+id/itemDecline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"

                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/shimmershape_dark"
                android:layout_weight="1"/>

            <View
                android:id="@+id/itemaccept"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/shimmershape_dark"
                android:layout_weight="1"/>


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
