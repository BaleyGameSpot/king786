<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:baselineAligned="false"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.view.MTextView
                            android:id="@+id/historyNoHTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:textColor="#141414"
                            android:textSize="@dimen/_13ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="Booking#" />

                        <com.view.MTextView
                            android:id="@+id/historyNoVTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:textColor="#141414"
                            android:textSize="@dimen/_13ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="4545454" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/statusArea"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="end|center"
                        android:background="@drawable/login_border"
                        android:gravity="center|end"
                        android:orientation="horizontal">

                        <com.view.MTextView
                            android:id="@+id/statusVTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="marquee"
                            android:fadingEdge="horizontal"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:paddingStart="@dimen/_3sdp"
                            android:paddingEnd="@dimen/_3sdp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textColor="@color/appThemeColor_TXT_1"
                            android:textSize="@dimen/_8ssp"
                            app:customTypeFace="@string/system_medium"
                            tools:text="@string/app_name" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/typeArea"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_20sdp"
                                app:cardBackgroundColor="#ffae00"
                                app:cardCornerRadius="@dimen/_8sdp"
                                app:cardElevation="0dp">

                                <com.view.MTextView
                                    android:id="@+id/SelectedTypeNameTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start|center"
                                    android:ellipsize="marquee"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:singleLine="true"
                                    android:textAlignment="center"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/_8ssp"
                                    tools:text="@string/app_name" />
                            </androidx.cardview.widget.CardView>

                            <com.view.MTextView
                                android:id="@+id/txtBiddingAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:textColor="#141414"
                                android:textSize="@dimen/_11ssp"
                                app:customTypeFace="@string/system_semi_bold" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@null"
                                    android:clickable="false"
                                    android:src="@drawable/ic_loc_icon" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.view.MTextView
                                        android:id="@+id/sourceAddressHTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:clickable="false"
                                        android:ellipsize="end"
                                        android:gravity="start|center_vertical"
                                        android:includeFontPadding="false"
                                        android:maxLines="1"
                                        android:textAlignment="viewStart"
                                        android:textColor="#929292"
                                        android:textSize="@dimen/_9ssp"
                                        app:customTypeFace="@string/system_regular"
                                        tools:text="Pickup From" />
                                </LinearLayout>

                                <com.view.MTextView
                                    android:id="@+id/sourceAddressTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="false"
                                    android:ellipsize="end"
                                    android:gravity="start|center_vertical"
                                    android:includeFontPadding="false"
                                    android:textAlignment="viewStart"
                                    android:textColor="#141414"
                                    android:textSize="@dimen/_11ssp"
                                    app:customTypeFace="@string/system_regular"
                                    tools:text="PrahladNagar Cross Road,Iscon Char Rasta" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/viewDetailsArea"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@drawable/selected_without_border"
                                android:backgroundTint="@color/appThemeColor_1"
                                android:gravity="center"
                                tools:ignore="UselessParent">

                                <com.view.MTextView
                                    android:id="@+id/viewDetailsTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textStyle="normal"
                                    app:autoSizeMaxTextSize="@dimen/_12ssp"
                                    app:autoSizeMinTextSize="@dimen/_6ssp"
                                    app:autoSizeStepGranularity="2sp"
                                    app:autoSizeTextType="uniform"
                                    app:customTypeFace="@string/system_medium"
                                    tools:text="View Details" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="#E3E3E3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <com.view.MTextView
                            android:id="@+id/dateTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:textAlignment="viewStart"
                            android:textColor="#929292"
                            android:textSize="@dimen/_10sdp"
                            app:customTypeFace="@string/system_regular"
                            tools:text="25th may,2016 (Wed)" />

                        <com.view.MTextView
                            android:id="@+id/timeTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:textAlignment="viewEnd"
                            android:textColor="#929292"
                            android:textSize="@dimen/_10sdp"
                            app:customTypeFace="@string/system_regular"
                            tools:text="05:30 PM" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>