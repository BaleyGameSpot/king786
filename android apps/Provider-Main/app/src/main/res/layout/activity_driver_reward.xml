<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="#f0f0f0"
    android:orientation="vertical">


    <include
        android:id="@+id/toolbar_include"
        layout="@layout/design_toolbar_general"
        android:layout_alignParentTop="true"
        tools:ignore="IncludeLayoutParam" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_include"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_include"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/profileArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appThemeColor_1">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivRewardImg"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        tools:src="@drawable/ic_close_round" />

                    <com.view.MTextView
                        android:id="@+id/txtRewardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="Unlock Branded Car Daily" />

                    <com.view.MTextView
                        android:id="@+id/levelStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="(InProgress)" />

                    <LinearLayout
                        android:id="@+id/topView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_28sdp"
                            android:orientation="horizontal">

                            <com.view.MTextView
                                android:id="@+id/txtStartDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:includeFontPadding="false"
                                android:maxLines="2"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="Start Date : 26-10-2023" />

                            <com.view.MTextView
                                android:id="@+id/txtEndDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:includeFontPadding="false"
                                android:maxLines="2"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="Start Date : OnGoing" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_minus23sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_55sdp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.view.MTextView

                                android:id="@+id/rewardTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/_16ssp"
                                app:customTypeFace="@string/system_bold"
                                tools:text="Reward Amount" />

                            <com.view.MTextView

                                android:id="@+id/rewardAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_16ssp"
                                app:customTypeFace="@string/system_bold"
                                tools:text="$500" />

                            <com.view.MTextView

                                android:id="@+id/progressTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/_16ssp"
                                app:customTypeFace="@string/system_bold"
                                tools:text="YourProgress" />

                            <!--                        <com.view.MTextView-->
                            <!--                            android:id="@+id/txtUnLocK"-->
                            <!--                            android:layout_width="wrap_content"-->
                            <!--                            android:layout_height="wrap_content"-->
                            <!--                            android:textColor="@color/appThemeColor_1"-->
                            <!--                            android:textSize="@dimen/_12ssp"-->
                            <!--                            app:customTypeFace="@string/system_bold" />-->

                            <!--                        <com.view.MTextView-->
                            <!--                            android:id="@+id/txtUnLocKBy"-->
                            <!--                            android:layout_width="wrap_content"-->
                            <!--                            android:layout_height="wrap_content"-->
                            <!--                            android:textColor="@color/appThemeColor_1"-->
                            <!--                            android:textSize="@dimen/_12ssp"-->
                            <!--                            app:customTypeFace="@string/system_medium" />-->
                        </LinearLayout>


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivArrowView"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_minus7sdp"
                            android:padding="@dimen/_8sdp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_arrow"
                            tools:visibility="visible" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <LinearLayout
                        android:id="@+id/llChartContainerView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:gravity="center"
                        android:orientation="horizontal" />

                    <com.view.MTextView
                        android:id="@+id/txtNote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_11sdp"
                        tools:text="Note:" />

                    <com.view.MTextView
                        android:id="@+id/rewardNote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_11sdp"
                        app:customTypeFace="@string/system_regular"
                        tools:text="Note : You are rewarded with an amount $ 200 and it is credited in your In-App Wallet." />

                    <LinearLayout
                        android:id="@+id/llDataView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/card_view_23_gray_shadow"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <LinearLayout
                            android:id="@+id/ll2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:id="@+id/rewardDetailDisplayArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_5sdp" />

                        </LinearLayout>

                        <com.view.MTextView
                            android:id="@+id/txtHowItWorks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:gravity="bottom|center"
                            android:padding="@dimen/_5sdp"
                            android:textColor="#3F51B5"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_medium"
                            tools:text="How It Works" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_include"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:visibility="gone" />

        <ProgressBar

            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llLevels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/chat_border"
        android:gravity="center">

        <com.view.MTextView
            android:id="@+id/txtAchieved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_curve_card"
            android:backgroundTint="@color/appThemeColor_1"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:customTypeFace="@string/system_semi_bold"
            tools:text="Achieved" />

        <com.view.MTextView
            android:id="@+id/txtNextLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_curve_card"
            android:backgroundTint="@color/white"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textSize="@dimen/_14ssp"
            app:customTypeFace="@string/system_semi_bold"
            tools:text="Next Level" />


    </LinearLayout>


</RelativeLayout>