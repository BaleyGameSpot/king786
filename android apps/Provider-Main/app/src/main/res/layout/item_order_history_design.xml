<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/containView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:elevation="0dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/dataArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center">

                    <com.view.MTextView
                        android:id="@+id/orderHotelName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:textColor="#141414"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="Hotel Name" />


                    <LinearLayout
                        android:id="@+id/orderStatusArea"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="end|center"
                        android:background="@drawable/login_border"
                        android:gravity="center|end"
                        android:orientation="horizontal">

                        <com.view.MTextView
                            android:id="@+id/orderStatusTxtView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:ellipsize="marquee"
                            android:fadingEdge="horizontal"
                            android:gravity="center"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/appThemeColor_TXT_1"
                            android:textSize="@dimen/_8ssp"
                            app:customTypeFace="@string/system_medium"
                            app:textAllCaps="true" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contentArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/typeArea"
                                android:layout_width="@dimen/_71sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/border_fill"
                                android:gravity="center">

                                <com.view.MTextView
                                    android:id="@+id/serviceNameTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:ellipsize="marquee"
                                    android:gravity="center"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:maxLines="2"
                                    android:text=""
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_8ssp" />

                            </LinearLayout>

                            <com.view.MTextView
                                android:id="@+id/orderNoTxtView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:gravity="end|center_vertical"
                                android:text=""
                                android:textColor="#141414"
                                android:textSize="@dimen/_13ssp"
                                app:customTypeFace="@string/system_semi_bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|start|center"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:gravity="top|start|center"
                                android:orientation="vertical">


                                <com.view.SelectableRoundedImageView
                                    android:id="@+id/storeImgView"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_gravity="start|center"
                                    android:gravity="start|center"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_no_pic_user"
                                    app:sriv_left_bottom_corner_radius="20dip"
                                    app:sriv_left_top_corner_radius="20dip"
                                    app:sriv_oval="true"
                                    app:sriv_right_bottom_corner_radius="20dip"
                                    app:sriv_right_top_corner_radius="20dip" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">


                                        <com.view.MTextView
                                            android:id="@+id/userNameTxtView"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start|center_vertical"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:maxLines="1"
                                            android:textColor="#141414"
                                            android:textSize="@dimen/_13ssp"
                                            app:customTypeFace="@string/system_semi_bold"
                                            tools:text="User Name" />

                                        <com.view.MTextView
                                            android:id="@+id/orderHotelAddress"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:clickable="false"
                                            android:ellipsize="end"
                                            android:gravity="start|center_vertical"
                                            android:includeFontPadding="false"
                                            android:textAlignment="viewStart"
                                            android:textColor="#141414"
                                            android:textSize="@dimen/_11ssp"
                                            app:customTypeFace="@string/system_regular"
                                            tools:text="B-510, Mondeal Square, PrahladNagar," />

                                        <com.view.MTextView
                                            android:id="@+id/totalItemsTxtView"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:clickable="false"
                                            android:ellipsize="end"
                                            android:gravity="start|center_vertical"
                                            android:includeFontPadding="false"
                                            android:maxLines="1"
                                            android:textAlignment="viewStart"
                                            android:textColor="#141414"
                                            android:textSize="@dimen/_11ssp"
                                            android:visibility="gone"
                                            app:customTypeFace="@string/system_regular"
                                            tools:text="1" />

                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.view.AutoFitEditText
                            android:id="@+id/orderPriceTxtView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_85sdp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:autoSizeMinTextSize="@dimen/_8ssp"
                            android:fontFamily="@string/system_semi_bold"
                            android:gravity="end|center"
                            android:maxLines="1"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"
                            tools:text="$45" />

                        <com.view.MTextView
                            android:id="@+id/orderPriceHTxtView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:gravity="end|center"
                            android:textAlignment="viewEnd"
                            android:textColor="#929292"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="gone"
                            app:customTypeFace="@string/system_regular"
                            tools:text="Total" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="#E3E3E3" />


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <com.view.MTextView
                            android:id="@+id/orderDateVTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:maxLines="1"
                            android:textAlignment="viewStart"
                            android:textColor="#929292"
                            android:textSize="@dimen/_10sdp"
                            app:customTypeFace="@string/system_regular"
                            tools:text="25th may,2016 (Wed)" />

                        <com.view.MTextView
                            android:id="@+id/orderTimeVTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:maxLines="1"
                            android:textAlignment="viewEnd"
                            android:textColor="#929292"
                            android:textSize="@dimen/_10sdp"
                            app:customTypeFace="@string/system_regular"
                            tools:text="05:30 PM" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/waitAmtGenerateArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#e2be0a"
                            android:orientation="horizontal"
                            android:padding="2dp">

                            <com.view.MTextView
                                android:id="@+id/amtWaitTxtView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|start"
                                android:gravity="start"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:text="Waiting for amount to be generated"
                                android:textAlignment="viewStart"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/txt_size_16"
                                app:customTypeFace="@string/system_medium" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
