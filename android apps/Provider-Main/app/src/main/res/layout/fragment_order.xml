<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llMainArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:orientation="vertical">

            <!--Filter view-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeeeee"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/filterArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:gravity="end">

                    <com.view.MTextView
                        android:id="@+id/filterTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:gravity="end|center"
                        android:includeFontPadding="false"
                        android:textAlignment="viewEnd"
                        android:textColor="#141414"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/system_medium"
                        tools:text="ALL" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/filterDropImg"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/down_arrow_selector" />
                </LinearLayout>

                <!--Calender Header-->
                <LinearLayout
                    android:id="@+id/calenderHeaderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/leftButton"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="false"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_15sdp"
                            app:srcCompat="@mipmap/ic_arrow_right_prj"
                            app:tint="@color/appThemeColor_1" />

                        <LinearLayout
                            android:id="@+id/titleContainerView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="false"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.view.MTextView
                                android:id="@+id/dateTitle"
                                style="@style/CalendarView.MonthTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="dateTitle"
                                android:textColor="@color/black_prj"
                                android:textSize="@dimen/_17ssp"
                                app:customTypeFace="@string/system_medium"
                                tools:text="MONTH 2014" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_15sdp"
                                app:srcCompat="@drawable/ic_caret_down" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/rightButton"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_15sdp"
                            app:srcCompat="@mipmap/ic_arrow_right_prj"
                            app:tint="@color/appThemeColor_1" />
                    </RelativeLayout>
                </LinearLayout>

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/nestedScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/detailsArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#FFFFFF"
                                    android:orientation="horizontal"
                                    android:paddingStart="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingEnd="5dp"
                                    android:visibility="gone">

                                    <include
                                        android:id="@+id/fromDateEditBox"
                                        layout="@layout/editbox_form_date_design"
                                        android:layout_width="0dp"
                                        android:layout_height="60dp"
                                        android:layout_weight="1" />

                                    <View
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0" />

                                    <include
                                        android:id="@+id/toDateEditBox"
                                        layout="@layout/editbox_form_date_design"
                                        android:layout_width="0dp"
                                        android:layout_height="60dp"
                                        android:layout_weight="1" />
                                </LinearLayout>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:layout_marginEnd="@dimen/_20sdp"
                                    android:elevation="0dp"
                                    app:cardCornerRadius="@dimen/_8sdp"
                                    app:cardElevation="0dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_25sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginBottom="@dimen/_10sdp">

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:layout_width="@dimen/_45sdp"
                                            android:layout_height="@dimen/_45sdp"
                                            app:srcCompat="@drawable/ic_money" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_25sdp"
                                            android:orientation="vertical">

                                            <com.view.MTextView
                                                android:id="@+id/earningFareHTxt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="?attr/selectableItemBackgroundBorderless"
                                                android:clickable="false"
                                                android:ellipsize="end"
                                                android:gravity="end|center"
                                                android:includeFontPadding="false"
                                                android:maxLines="2"
                                                android:minLines="1"
                                                android:text="Earned"
                                                android:textAlignment="viewEnd"
                                                android:textColor="#141414"
                                                android:textSize="@dimen/_13ssp"
                                                app:customTypeFace="@string/system_medium" />

                                            <com.view.MTextView
                                                android:id="@+id/earningFareVTxt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_10sdp"
                                                android:background="?attr/selectableItemBackgroundBorderless"
                                                android:clickable="false"
                                                android:ellipsize="end"
                                                android:gravity="end|center"
                                                android:includeFontPadding="false"
                                                android:textAlignment="viewEnd"
                                                android:textColor="@color/appThemeColor_1"
                                                android:textSize="@dimen/_22ssp"
                                                app:customTypeFace="@string/system_semi_bold" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:id="@+id/containView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_85sdp"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_20sdp"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:elevation="0dp"
                                        android:minHeight="@dimen/_85sdp"
                                        app:cardBackgroundColor="@color/appThemeColor_1"
                                        app:cardCornerRadius="@dimen/_8sdp"
                                        app:cardElevation="0dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_10sdp"
                                            android:layout_marginEnd="@dimen/_5sdp"
                                            android:gravity="center">

                                            <androidx.appcompat.widget.AppCompatImageView
                                                android:layout_width="@dimen/_30sdp"
                                                android:layout_height="@dimen/_30sdp"
                                                android:layout_gravity="center"
                                                app:srcCompat="@drawable/ic_bag" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_10sdp"
                                                android:layout_marginEnd="@dimen/_10sdp"
                                                android:orientation="vertical">

                                                <com.view.MTextView
                                                    android:id="@+id/totalOrderHTxt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:autoSizeStepGranularity="@dimen/_1ssp"
                                                    android:background="?attr/selectableItemBackgroundBorderless"
                                                    android:clickable="false"
                                                    android:gravity="start|center"
                                                    android:includeFontPadding="false"
                                                    android:maxLines="2"
                                                    android:minLines="1"
                                                    android:text=""
                                                    android:textAlignment="viewStart"
                                                    android:textColor="@color/appThemeColor_TXT_1"
                                                    android:textSize="@dimen/_13ssp"
                                                    app:autoSizeMaxTextSize="@dimen/_13ssp"
                                                    app:autoSizeMinTextSize="@dimen/_10ssp"
                                                    app:autoSizeTextType="uniform"
                                                    app:customTypeFace="@string/system_medium" />

                                                <com.view.MTextView
                                                    android:id="@+id/totalOrderVTxt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="@dimen/_5sdp"
                                                    android:background="?attr/selectableItemBackgroundBorderless"
                                                    android:clickable="false"
                                                    android:ellipsize="start"
                                                    android:gravity="start|center"
                                                    android:includeFontPadding="false"
                                                    android:maxLines="2"
                                                    android:minLines="1"
                                                    android:text=""
                                                    android:textAlignment="viewStart"
                                                    android:textColor="@color/appThemeColor_TXT_1"
                                                    android:textSize="@dimen/_22ssp"
                                                    app:customTypeFace="@string/system_semi_bold" />
                                            </LinearLayout>
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="@dimen/_15sdp"
                                        android:layout_weight="1"
                                        android:elevation="0dp"
                                        android:minHeight="@dimen/_85sdp"
                                        app:cardBackgroundColor="@color/appThemeColor_1"
                                        app:cardCornerRadius="@dimen/_8sdp"
                                        app:cardElevation="0dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_10sdp"
                                            android:layout_marginEnd="@dimen/_5sdp"
                                            android:gravity="center">

                                            <androidx.appcompat.widget.AppCompatImageView
                                                android:layout_width="@dimen/_30sdp"
                                                android:layout_height="@dimen/_30sdp"
                                                android:layout_gravity="center"
                                                app:srcCompat="@drawable/ic_avg_rating" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_10sdp"
                                                android:layout_marginEnd="@dimen/_10sdp"
                                                android:orientation="vertical">

                                                <com.view.MTextView
                                                    android:id="@+id/avgRatingTxt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:autoSizeStepGranularity="@dimen/_1ssp"
                                                    android:background="?attr/selectableItemBackgroundBorderless"
                                                    android:clickable="false"
                                                    android:gravity="start|center"
                                                    android:includeFontPadding="false"
                                                    android:maxLines="2"
                                                    android:text=""
                                                    android:textAlignment="viewStart"
                                                    android:textColor="@color/appThemeColor_TXT_1"
                                                    android:textSize="@dimen/_13ssp"
                                                    app:autoSizeMaxTextSize="@dimen/_13ssp"
                                                    app:autoSizeMinTextSize="@dimen/_10ssp"
                                                    app:autoSizeTextType="uniform"
                                                    app:customTypeFace="@string/system_medium" />

                                                <com.view.MTextView
                                                    android:id="@+id/avgRatingCalcTxt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="@dimen/_5sdp"
                                                    android:background="?attr/selectableItemBackgroundBorderless"
                                                    android:clickable="false"
                                                    android:ellipsize="start"
                                                    android:gravity="start|center"
                                                    android:includeFontPadding="false"
                                                    android:maxLines="2"
                                                    android:minLines="1"
                                                    android:text=""
                                                    android:textAlignment="viewStart"
                                                    android:textColor="@color/appThemeColor_TXT_1"
                                                    android:textSize="@dimen/_22ssp"
                                                    app:customTypeFace="@string/system_semi_bold" />
                                            </LinearLayout>
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#eeeeee">

                                <LinearLayout
                                    android:id="@+id/containerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/historyRecyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginBottom="@dimen/_15sdp"
                                        android:background="#eeeeee"
                                        android:nestedScrollingEnabled="false"
                                        android:orientation="vertical"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
                                </LinearLayout>

                                <com.view.MTextView
                                    android:id="@+id/noOrdersTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="#1C1C1C"
                                    android:textSize="@dimen/txt_size_16"
                                    android:visibility="gone" />

                                <com.view.ErrorView
                                    android:id="@+id/errorView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>
                </androidx.coordinatorlayout.widget.CoordinatorLayout>
            </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</RelativeLayout>