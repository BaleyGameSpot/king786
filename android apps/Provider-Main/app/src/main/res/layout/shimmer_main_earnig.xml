<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="3"
            android:background="@drawable/shimmershape" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1.2"
            android:background="@drawable/shimmershape" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llView"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleArea"
        android:gravity="center">

        <View
            android:id="@+id/cat1area"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/marker"
            android:backgroundTint="@color/light_transparent" />

        <View
            android:id="@+id/cat2area"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/marker"
            android:backgroundTint="@color/light_transparent" />

        <View
            android:id="@+id/cat3area"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/marker"
            android:backgroundTint="@color/light_transparent" />

        <View
            android:id="@+id/cat4area"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/marker"
            android:backgroundTint="@color/light_transparent" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/llView" />
</RelativeLayout>