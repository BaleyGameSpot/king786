<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentArea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/design_toolbar_general" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/biddingStatusArea"
        android:layout_below="@id/toolbar">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/llMainArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/appThemeColor_1"
                    android:minHeight="@dimen/_130sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/contactName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:text="viru"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp"
                            app:customTypeFace="@string/system_medium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@null"
                                    android:clickable="false"
                                    android:src="@drawable/ic_locate_place" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.view.MTextView
                                        android:id="@+id/sourceAddressHTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:alpha="0.8"
                                        android:clickable="false"
                                        android:ellipsize="end"
                                        android:gravity="start|center_vertical"
                                        android:includeFontPadding="false"
                                        android:maxLines="1"
                                        android:text="Pickup From"
                                        android:textAlignment="viewStart"
                                        android:textAllCaps="true"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_9ssp"
                                        app:customTypeFace="@string/system_regular" />
                                </LinearLayout>

                                <com.view.MTextView
                                    android:id="@+id/sourceAddressTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginBottom="@dimen/_15sdp"
                                    android:layout_weight="1"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="false"
                                    android:ellipsize="end"
                                    android:gravity="start|center_vertical"
                                    android:includeFontPadding="false"
                                    android:text="PrahladNagar Cross Road,Iscon Char Rasta"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_11ssp"
                                    app:customTypeFace="@string/system_regular" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_minus25sdp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:elevation="0dp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.view.MTextView
                                android:id="@+id/txtTaskHint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Task # "
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/_17ssp"
                                app:customTypeFace="@string/system_semi_bold" />

                            <com.view.MTextView
                                android:id="@+id/txtTaskValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:ellipsize="marquee"
                                android:gravity="start|center"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:maxLines="2"
                                android:paddingStart="2dp"
                                android:paddingEnd="2dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/_17ssp"
                                app:customTypeFace="@string/system_semi_bold" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <com.view.MTextView
                        android:id="@+id/bidDateVTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="WED, JUL 10 2019 AT 5:30 PM"
                        android:textColor="#767676"
                        android:textSize="@dimen/_11ssp"
                        app:customTypeFace="@string/system_regular" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:elevation="0dp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/serviceNameTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:textAlignment="viewStart"
                            android:textColor="#141414"
                            android:textSize="@dimen/_16ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="Service name" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/txtBidAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:textAlignment="viewStart"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/_16ssp"
                                app:customTypeFace="@string/system_medium"
                                tools:text="long hair " />

                            <com.view.MTextView
                                android:id="@+id/txtBidAmountDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="@string/app_name"
                                android:textAlignment="viewStart"
                                android:textColor="#767676"
                                app:customTypeFace="@string/system_regular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/offerAmountTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxLines="2"
                                android:text="@string/app_name"
                                android:textAlignment="viewStart"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_16ssp"
                                android:textStyle="normal"
                                app:customTypeFace="@string/system_medium" />

                            <com.view.MTextView
                                android:id="@+id/txtReOfferAmountDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="@string/app_name"
                                android:textAlignment="viewStart"
                                android:textColor="#767676"
                                app:customTypeFace="@string/system_regular" />
                        </LinearLayout>

                        <com.view.MTextView
                            android:id="@+id/commentHTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewStart"
                            android:textColor="#141414"
                            android:textSize="@dimen/_16ssp"
                            android:visibility="visible"
                            app:customTypeFace="@string/system_bold"
                            tools:text="special Instuction " />

                        <com.view.MTextView
                            android:id="@+id/commentVTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewStart"
                            android:textColor="#141414"
                            android:textSize="@dimen/_14ssp"
                            app:customTypeFace="@string/system_regular"
                            tools:text="Instuction " />

                        <com.view.MTextView
                            android:id="@+id/attachedMediaTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textAlignment="center"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_14ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="View attached media files" />

                        <LinearLayout
                            android:id="@+id/llButtonView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:background="@color/gray" />

                            <com.view.MTextView
                                android:id="@+id/statusVTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:textColor="#141414"
                                android:textSize="@dimen/_14ssp"
                                app:customTypeFace="@string/system_regular" />

                            <com.view.MTextView
                                android:id="@+id/txtFinalAmountStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="2"
                                android:textAlignment="center"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_11ssp"
                                android:visibility="visible"
                                app:customTypeFace="@string/system_medium"
                                tools:text="test comment test com " />

                            <com.view.MTextView
                                android:id="@+id/txtReOffer"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@drawable/unselected_border"
                                android:backgroundTint="@color/appThemeColor_1"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="Re Offer"
                                android:textAllCaps="true"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/txt_size_16"
                                app:customTypeFace="@string/system_medium" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.view.MTextView
                                    android:id="@+id/txtDecline"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/unselected_border"
                                    android:backgroundTint="@color/appThemeColor_1"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Decline"
                                    android:textAllCaps="true"
                                    android:textColor="@color/appThemeColor_1"
                                    android:textSize="@dimen/txt_size_16"
                                    app:customTypeFace="@string/system_medium" />

                                <View
                                    android:id="@+id/viewAcceptDecline"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="match_parent" />

                                <com.view.MTextView
                                    android:id="@+id/txtAccept"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/selected_border"
                                    android:backgroundTint="@color/appThemeColor_1"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="Accept"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/txt_size_16"
                                    app:customTypeFace="@string/system_medium" />
                            </LinearLayout>

                            <com.view.MTextView
                                android:id="@+id/txtStartTask"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@drawable/selected_border"
                                android:backgroundTint="@color/appThemeColor_1"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="Start Task"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_size_16"
                                app:customTypeFace="@string/system_medium" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/cancelReasonArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/history_reason_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp"
                    android:visibility="visible">

                    <com.view.MTextView
                        android:id="@+id/vReasonTitleTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="start"
                        android:minLines="1"
                        android:text="Cancel reason 123"
                        android:textAlignment="viewStart"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"
                        app:customTypeFace="@string/system_medium"
                        app:textAllCaps="true" />


                    <com.view.MTextView
                        android:id="@+id/vReasonVTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:text="Cancel reason txt"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        app:customTypeFace="@string/system_regular" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/biddingStatusArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_curve_card_back"
        android:elevation="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:gravity="center"
            android:minHeight="@dimen/_30sdp">

            <com.view.MTextView
                android:id="@+id/txtBiddingStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="3"
                android:minLines="1"
                android:textAllCaps="true"
                android:textColor="@color/appThemeColor_TXT_2"
                android:textSize="@dimen/_13ssp"
                app:customTypeFace="@string/system_medium" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
