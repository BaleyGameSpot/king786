<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F2F2F4"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_include"
        layout="@layout/design_toolbar_general" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progresdefault"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/appThemeColor_1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/profilearea"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:layout_marginBottom="@dimen/_15sdp"
                                    android:layout_weight="0.65"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <com.view.SelectableRoundedImageView
                                            android:id="@+id/driverImgView"
                                            android:layout_width="@dimen/_65sdp"
                                            android:layout_height="@dimen/_65sdp"
                                            android:layout_gravity="start|center"
                                            android:scaleType="centerCrop"
                                            app:sriv_border_color="@color/appThemeColor_TXT_1"
                                            app:sriv_border_width="2dip"
                                            app:sriv_left_bottom_corner_radius="20dip"
                                            app:sriv_left_top_corner_radius="20dip"
                                            app:sriv_oval="true"
                                            app:sriv_right_bottom_corner_radius="20dip"
                                            app:sriv_right_top_corner_radius="20dip" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginEnd="25dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <com.view.MTextView
                                            android:id="@+id/namePassengerVTxt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start|center"
                                            android:gravity="start|center"
                                            android:textAlignment="viewStart"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_13ssp"
                                            app:customTypeFace="@string/system_semi_bold" />

                                        <com.view.simpleratingbar.SimpleRatingBar
                                            android:id="@+id/ratingBar"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:backgroundTint="@color/gray_holo_light"
                                            android:padding="2dp"
                                            app:SRB_fillColor="@color/rating_fill_color"
                                            app:SRB_isIndicator="true"
                                            app:SRB_numberOfStars="5"
                                            app:SRB_starBackgroundColor="@color/gray_holo_light"
                                            app:SRB_starSize="19sp"
                                            app:SRB_stepSize="0.5" />

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/signArea"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:elevation="0dp"
                                            android:visibility="gone"
                                            app:cardCornerRadius="@dimen/_4sdp"
                                            app:cardElevation="0dp">

                                            <com.view.MTextView
                                                android:id="@+id/passengerSignTxt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:includeFontPadding="false"
                                                android:paddingStart="@dimen/_10sdp"
                                                android:paddingTop="@dimen/_5sdp"
                                                android:paddingEnd="@dimen/_5sdp"
                                                android:paddingBottom="@dimen/_5sdp"
                                                android:text="view signature"
                                                android:textAlignment="center"
                                                android:textColor="@color/appThemeColor_1"
                                                android:textSize="@dimen/_13ssp"
                                                android:visibility="visible"
                                                app:customTypeFace="@string/system_regular" />
                                        </androidx.cardview.widget.CardView>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@+id/view"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@color/appThemeColor_1" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:elevation="0dp"
                                app:cardCornerRadius="@dimen/_8sdp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:orientation="vertical">

                                    <com.view.MTextView
                                        android:id="@+id/headerTxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:maxLines="2"
                                        android:paddingStart="10dp"
                                        android:paddingEnd="10dp"
                                        android:textColor="#141414"
                                        android:textSize="@dimen/_13ssp"
                                        app:customTypeFace="@string/system_semi_bold" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <com.view.MTextView
                                            android:id="@+id/rideNoHTxt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:maxLines="1"
                                            android:textColor="@color/appThemeColor_1"
                                            android:textSize="@dimen/_17ssp"
                                            app:customTypeFace="@string/system_semi_bold" />

                                        <com.view.MTextView
                                            android:id="@+id/rideNoVTxt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:maxLines="1"
                                            android:paddingStart="2dp"
                                            android:paddingEnd="2dp"
                                            android:textColor="@color/appThemeColor_1"
                                            android:textSize="@dimen/_17ssp"
                                            app:customTypeFace="@string/system_semi_bold" />
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/tripdateVTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#767676"
                                android:textSize="@dimen/_11ssp"
                                app:customTypeFace="@string/system_regular" />

                            <LinearLayout
                                android:id="@+id/sourceLocCardArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.view.MTextView
                                    android:id="@+id/pickUpAddressHTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="start"
                                    android:textAlignment="viewStart"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/txt_size_16"
                                    app:customTypeFace="@string/system_semi_bold" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_15sdp"
                                    android:elevation="0dp"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/_8sdp"
                                    app:cardElevation="0dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_10sdp"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/srcArea"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:visibility="visible">

                                            <androidx.appcompat.widget.AppCompatImageView
                                                android:layout_width="@dimen/_40sdp"
                                                android:layout_height="@dimen/_40sdp"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                app:srcCompat="@drawable/ic_locate_place" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/pickupLocArea"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_8sdp"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <com.view.MTextView
                                                android:id="@+id/pickUpAddressVTxt"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="1"
                                                android:background="?attr/selectableItemBackgroundBorderless"
                                                android:clickable="false"
                                                android:ellipsize="end"
                                                android:gravity="start|center_vertical"
                                                android:includeFontPadding="false"
                                                android:maxLines="3"
                                                android:minLines="1"
                                                android:textAlignment="viewStart"
                                                android:textColor="#141414"
                                                android:textSize="@dimen/_12ssp"
                                                app:customTypeFace="@string/system_regular" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/chargeArea"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <com.view.MTextView
                                        android:id="@+id/chargesHTxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:gravity="start"
                                        android:textAlignment="viewStart"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/txt_size_16"
                                        app:customTypeFace="@string/system_semi_bold" />

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:elevation="0dp"
                                        app:cardBackgroundColor="#ffffff"
                                        app:cardCornerRadius="@dimen/_8sdp"
                                        app:cardElevation="0dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <com.view.MTextView
                                                android:id="@+id/cartypeTxt"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_10sdp"
                                                android:layout_marginBottom="@dimen/_5sdp"
                                                android:gravity="center"
                                                android:textColor="#090909"
                                                android:textSize="@dimen/_15ssp"
                                                app:customTypeFace="@string/system_semi_bold" />

                                            <LinearLayout
                                                android:id="@+id/fareDetailDisplayArea"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_15sdp"
                                                android:layout_marginEnd="@dimen/_15sdp"
                                                android:orientation="vertical" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/loading"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone" />

                    <com.view.ErrorView
                        android:id="@+id/errorView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/white"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/paymentMainArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/paymentarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus30sdp"
                android:background="@drawable/top_curve_card"
                android:elevation="@dimen/_5sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingBottom="@dimen/_30sdp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/paymentTypeImgeView"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/appThemeColor_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/paymentTypeTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:maxLines="1"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textAllCaps="true"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/txt_size_12"
                            android:textStyle="bold"
                            app:customTypeFace="@string/system_semi_bold" />

                        <com.view.MTextView
                            android:id="@+id/recipientTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:maxLines="1"
                            tools:text="Cash payment"
                            android:textAlignment="viewStart"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_11ssp"
                            android:visibility="gone"
                            app:customTypeFace="@string/system_regular" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tripStatusArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_curve_card_back"
                android:elevation="@dimen/_5sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:gravity="center"
                    android:minHeight="@dimen/_30sdp">

                    <com.view.MTextView
                        android:id="@+id/tripStatusTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="3"
                        android:minLines="1"
                        android:textAllCaps="true"
                        android:textColor="@color/appThemeColor_TXT_2"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/system_medium" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>