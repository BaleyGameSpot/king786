<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backImgView"
        android:layout_width="@dimen/_46sdp"
        android:layout_height="@dimen/_46sdp"
        android:layout_gravity="start|end"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/circle_shadow_big"
        android:elevation="@dimen/_5sdp"
        app:srcCompat="@drawable/ic_back_button" />

    <FrameLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/content_add_address"
        android:layout_below="@+id/topHeader">

        <fragment
            android:id="@+id/mapV2"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:ignore="FragmentTagUsage"
            tools:layout="@layout/custom_tab_prj" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/pinImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_round_pin" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/pickUpLocSearchArea"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_search_23" />

            <com.view.MTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textColor="#1C1C1C"
                android:textSize="@dimen/txt_size_16" />
        </LinearLayout>

        <View
            android:id="@+id/seperationLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#cecece"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/placeArea"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.view.MTextView
                android:id="@+id/homePlaceTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#333"
                android:textSize="@dimen/txt_size_16"
                android:visibility="gone"
                tools:text="Home Place" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0"
                android:background="#cecece" />

            <com.view.MTextView
                android:id="@+id/workPlaceTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#333"
                android:textSize="@dimen/txt_size_16"
                android:visibility="gone"
                tools:text="Work Place" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:background="@drawable/top_curve_card"
        android:elevation="@dimen/_5sdp"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <com.view.MTextView
                android:id="@+id/titleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="horizontal"
                android:gravity="start|center"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#828282"
                android:textSize="@dimen/_12ssp"
                app:customTypeFace="@string/system_regular"
                tools:text="Your Location" />

            <LinearLayout
                android:id="@+id/loc_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_check_mark" />

                <com.view.MTextView
                    android:id="@+id/placeTxtView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="start|center"
                    android:maxLines="2"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    app:customTypeFace="@string/system_regular" />

                <com.view.MTextView
                    android:id="@+id/locationImage"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="end|center"
                    android:textAllCaps="true"
                    android:textColor="@color/appThemeColor_1"
                    app:customTypeFace="@string/system_regular"
                    tools:text="Change" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <include
                    android:id="@+id/btn_type2"
                    layout="@layout/btn_type_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_btn_height" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>