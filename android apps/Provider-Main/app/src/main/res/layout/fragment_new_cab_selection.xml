<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/testBgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@color/black" />

    <LinearLayout

        android:id="@+id/toolbarArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        tools:visibility="visible">

        <include layout="@layout/design_toolbar_general" />

    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarArea"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        tools:visibility="gone">


        <LinearLayout
            android:id="@+id/hailBottomSheetLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <RelativeLayout
                android:id="@+id/rentalarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:animateLayoutChanges="true"
                android:background="@android:color/transparent"
                android:gravity="end"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/add_border"
                    android:backgroundTint="@color/white"
                    android:elevation="@dimen/_5sdp"
                    android:maxWidth="@dimen/_125sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/rentIconImage"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:tint="@color/appThemeColor_1"
                        app:srcCompat="@drawable/ic_sedan_car_front" />

                    <com.view.MTextView
                        android:id="@+id/rentalPkg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingStart="10dp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible"
                        app:customTypeFace="@string/system_regular"
                        tools:text="Rental" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/cardashadowView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:visibility="gone"
                tools:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/detailArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/mainContentArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical">

                            <ProgressBar
                                android:id="@+id/mProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-6dp"
                                android:visibility="invisible" />

                            <LinearLayout
                                android:id="@+id/verticalscrollIndicatorLL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:animateLayoutChanges="true"
                                android:gravity="center_horizontal">

                                <View
                                    android:id="@+id/verticalscrollIndicator"
                                    android:layout_width="@dimen/_44sdp"
                                    android:layout_height="@dimen/_3sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_11sdp"
                                    android:layout_marginBottom="@dimen/_11sdp"
                                    android:background="@drawable/rounded_view_home"
                                    android:backgroundTint="@color/gray"
                                    android:visibility="gone"
                                    tools:visibility="visible" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center">

                                <ImageView
                                    android:id="@+id/rentalBackImage"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:scaleX="1.4"
                                    android:scaleY="1.4"
                                    android:src="@mipmap/ic_back_arrow"
                                    android:visibility="gone"
                                    app:tint="@color/appThemeColor_1"
                                    tools:visibility="visible" />

                                <com.view.MTextView
                                    android:id="@+id/noServiceTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:textColor="#2f2f2f"
                                    android:textSize="@dimen/txt_size_12"
                                    android:visibility="gone"
                                    app:customTypeFace="@string/system_regular"
                                    tools:text="Service not available in this location" />


                                <FrameLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/mainArea"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentEnd="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:gravity="center">


                                    <androidx.recyclerview.widget.RecyclerView

                                        android:id="@+id/carTypeRecyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@color/white"
                                        android:nestedScrollingEnabled="false"
                                        android:orientation="horizontal"
                                        android:overScrollMode="never"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                                    <com.view.anim.loader.AVLoadingIndicatorView
                                        android:id="@+id/loaderView"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_gravity="center|top"
                                        android:layout_marginTop="@dimen/_30sdp"
                                        android:background="@android:color/transparent"
                                        android:visibility="gone"
                                        app:indicator="BallSpinFadeLoader"
                                        app:indicator_color="#000000" />

                                </FrameLayout>

                                <RelativeLayout
                                    android:id="@+id/mainArea"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:animateLayoutChanges="true">


                                    <com.view.MTextView
                                        android:id="@+id/rentalPkgDesc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginBottom="@dimen/_15sdp"
                                        android:foregroundTint="@color/black"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_10"
                                        android:visibility="visible"
                                        app:customTypeFace="@string/system_medium"
                                        tools:text="Rent a cab at flexible hourly packages" />
                                </RelativeLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <LinearLayout
        android:id="@+id/design_linear_layout_car_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/requestPayArea"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/_minus2sdp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rentalArea2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_11sdp"
            android:animateLayoutChanges="true"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/card_view_23_white_line_flat_1"
                android:elevation="@dimen/_2sdp"
                android:maxWidth="@dimen/_125sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/rentIconImage2"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_7sdp"
                    app:srcCompat="@drawable/ic_sedan_car_front" />

                <com.view.MTextView
                    android:id="@+id/rentalPkg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:textColor="@color/text23Pro_Dark"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="visible"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="Rental" />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus5sdp"
                android:background="@drawable/card_view_23_white_line_flat_1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/_15sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imagecar"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.view.MTextView
                        android:id="@+id/carTypeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_15ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="Basic" />

                    <com.view.MTextView

                        android:id="@+id/personsizeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:drawableStart="@drawable/ic_baseline_person_24"
                        android:drawablePadding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_11ssp"
                        app:customTypeFace="@string/system_bold" />


                    <com.view.MTextView
                        android:id="@+id/fareVTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:layout_weight="1"
                        android:gravity="end|center"
                        android:maxLines="1"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/_15ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="$ 22.00" />

                </LinearLayout>


                <com.view.MTextView
                    android:id="@+id/pkgMsgTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/text23Pro_Light"
                    android:textSize="@dimen/_10ssp"
                    app:customTypeFace="@string/system_regular"
                    tools:text="fdgdfgsdf" />


                <LinearLayout
                    android:id="@+id/moreDetailsParentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.view.MTextView
                        android:id="@+id/mordetailsTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:gravity="center"
                        android:maxWidth="@dimen/_210sdp"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/_11ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="More Details" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/morwArrow"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        app:srcCompat="@drawable/ic_down_arrow_23"
                        app:tint="@color/appThemeColor_1" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/requestPayArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/card_view_23_white_top_shadow"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/cashcardarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/paymentArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/errorImage"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/payImgView"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_cash" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/organizationArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.view.MTextView
                                android:id="@+id/organizationTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:clickable="false"
                                android:gravity="start|center"
                                android:includeFontPadding="false"
                                android:text="Personal"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Light"
                                android:textSize="@dimen/_11ssp"
                                app:customTypeFace="@string/system_regular" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp">

                                <ImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="@dimen/_8sdp"
                                    android:layout_gravity="center"
                                    android:clickable="false"
                                    android:visibility="gone"
                                    app:srcCompat="@drawable/ic_down_arrow" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.view.MTextView
                                android:id="@+id/payTypeTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:clickable="false"
                                android:gravity="start|center"
                                android:includeFontPadding="false"
                                android:text="Cash"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14ssp"
                                app:customTypeFace="@string/system_semi_bold" />

                            <LinearLayout
                                android:id="@+id/showDropDownArea"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:gravity="center"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="@dimen/_8sdp"
                                    android:layout_gravity="center"
                                    android:clickable="false"
                                    android:gravity="center"
                                    android:visibility="gone"
                                    app:srcCompat="@drawable/ic_down_arrow" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/arrowImg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:rotation="270"
                    android:src="@drawable/ic_down_arrow_23"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="@dimen/_11sdp"
            android:paddingBottom="@dimen/_15sdp">

            <LinearLayout
                android:id="@+id/sendRequestArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_2sdp">

                    <LinearLayout

                        android:id="@+id/btnArea"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_btn_height"
                        android:layout_centerInParent="true"
                        android:layout_weight="1">

                        <include
                            android:id="@+id/ride_now_btn"
                            layout="@layout/btn_type_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/scheduleArrowImage"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right"
                        android:visibility="gone"

                        app:tint="@color/appThemeColor_TXT_1" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>