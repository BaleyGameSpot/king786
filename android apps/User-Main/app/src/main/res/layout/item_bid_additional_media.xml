<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/contentAreaView"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            tools:ignore="UselessParent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/mediaImgView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/documentView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_20sdp"
                        app:srcCompat="@drawable/ic_file_document" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/audioView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_20sdp"
                        app:srcCompat="@drawable/ic_file_audio" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/deleteImgView"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/_3sdp"
                        app:srcCompat="@drawable/ic_delete_icon" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/deleteImgViewBottom"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_delete_gallery"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/exoPlay"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/addView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_1sdp"
                app:srcCompat="@drawable/ic_upload_precription" />
        </RelativeLayout>
    </RelativeLayout>
</layout>