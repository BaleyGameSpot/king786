<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_view_23_gray_shadow"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/closeImg"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/circle_shadow_big"
                android:gravity="end"
                android:padding="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_close_button" />

            <com.view.MTextView
                android:id="@+id/titleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/_14sdp"
                app:customTypeFace="@string/system_bold"
                tools:ignore="RelativeOverlap"
                tools:text="Choose an account" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleTxt"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/card_view_23_white_shadow"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/imageArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/circle_shadow_big"
                            android:padding="@dimen/_8sdp"
                            app:srcCompat="@drawable/ic_image_icon" />

                        <com.view.MTextView
                            android:id="@+id/imageHTxt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:includeFontPadding="false"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_12sdp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="image" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imageArrow"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="end|center_vertical"
                            android:rotation="-90"
                            app:srcCompat="@drawable/ic_arrow_point_to_down"
                            app:tint="@color/text23Pro_Light" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/view23ProBG" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/videoArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/circle_shadow_big"
                            android:padding="@dimen/_9sdp"
                            app:srcCompat="@drawable/ic_video_icon" />

                        <com.view.MTextView
                            android:id="@+id/videoHTxt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:includeFontPadding="false"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_12sdp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="video" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/videoArrow"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="end|center_vertical"
                            android:rotation="-90"
                            app:srcCompat="@drawable/ic_arrow_point_to_down"
                            app:tint="@color/text23Pro_Light" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/view23ProBG" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/documentArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/circle_shadow_big"
                            android:padding="@dimen/_8sdp"
                            app:srcCompat="@drawable/ic_document_icon" />

                        <com.view.MTextView
                            android:id="@+id/documentHTxt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:includeFontPadding="false"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_12sdp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="document" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/documentArrow"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="end|center_vertical"
                            android:rotation="-90"
                            app:srcCompat="@drawable/ic_arrow_point_to_down"
                            app:tint="@color/text23Pro_Light" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/view23ProBG" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/audioArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/circle_shadow_big"
                        android:padding="@dimen/_8sdp"
                        app:srcCompat="@drawable/ic_audio_icon" />

                    <com.view.MTextView
                        android:id="@+id/audioHTxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:includeFontPadding="false"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12sdp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="audio" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/audioArrow"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="end|center_vertical"
                        android:rotation="-90"
                        app:srcCompat="@drawable/ic_arrow_point_to_down"
                        app:tint="@color/text23Pro_Light" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>