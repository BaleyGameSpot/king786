<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/design_toolbar_general" />

        <RelativeLayout
            android:id="@+id/chatParentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_include"
            android:animateLayoutChanges="true">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/black" />

            <LinearLayout
                android:id="@+id/mainArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/detailArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/appThemeColor_1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        tools:ignore="UselessParent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:elevation="0dp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="0dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/userImgView"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_centerVertical="true"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/userNameTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:ellipsize="end"
                                android:ems="3"
                                android:singleLine="true"
                                android:textAlignment="viewStart"
                                android:textColor="@color/appThemeColor_TXT_1"
                                android:textSize="@dimen/_14ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="@string/app_name" />

                            <LinearLayout
                                android:id="@+id/ratingArea"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:gravity="center">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ratingImg"
                                    android:layout_width="@dimen/_11sdp"
                                    android:layout_height="@dimen/_11sdp"
                                    app:srcCompat="@drawable/ic_star_filled" />

                                <com.view.MTextView
                                    android:id="@+id/driverRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13ssp"
                                    app:customTypeFace="@string/system_semi_bold"
                                    tools:text="5.4" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:animateLayoutChanges="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:animateLayoutChanges="true">

                                <com.view.MTextView
                                    android:id="@+id/catTypeText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:ellipsize="end"
                                    android:ems="3"
                                    android:singleLine="true"
                                    android:textAlignment="center"
                                    android:textColor="@color/text23Pro_Dark"
                                    android:textSize="@dimen/_13ssp"
                                    app:customTypeFace="@string/system_semi_bold"
                                    tools:text="@string/app_name" />

                                <View
                                    android:id="@+id/shadowHeaderView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_5sdp"
                                    android:layout_below="@+id/catTypeText"
                                    android:layout_marginTop="@dimen/_minus3sdp"
                                    android:background="@drawable/custom_shadow_header_1" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/chatCategoryRecyclerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/catTypeText"
                                    android:layout_alignParentBottom="true"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:orientation="vertical"
                                    android:stackFromBottom="true"
                                    android:transcriptMode="alwaysScroll"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    app:stackFromEnd="true" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/card_view_23_gray_shadow"
                            android:gravity="bottom">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/mediaImg"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                app:srcCompat="@mipmap/ic_camera_fab"
                                app:tint="@color/black" />

                            <com.view.editBox.MaterialEditText
                                android:id="@+id/input"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_11ssp"
                                app:customTypeFace="@string/system_regular"
                                app:met_hideUnderline="true"
                                tools:hint="@string/app_name" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/msgBtn"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="@dimen/_4sdp"
                                app:srcCompat="@drawable/ic_chat_send" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/carouselViewArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C0000000"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/closeImg"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_30sdp">

                <include
                    android:id="@+id/fullImage"
                    layout="@layout/zoomable_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/closeImg"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:padding="@dimen/_7sdp"
                app:srcCompat="@drawable/ic_close_round" />
        </RelativeLayout>
    </RelativeLayout>
</layout>