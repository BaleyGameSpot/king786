<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/design_toolbar_general" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rideAlterArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/beforeDeparturesArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/beforeDeparturesHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_15sdp"
                        android:drawableStart="@drawable/ic_down_arrow_23"
                        android:drawablePadding="@dimen/_10sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_bold"
                        app:drawableTint="@color/text23Pro_Light"
                        tools:text="before Departures" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_minus5sdp"
                        android:layout_marginEnd="@dimen/_minus5sdp"
                        android:background="@drawable/card_view_23_gray_shadow"
                        android:backgroundTint="@color/gray_light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">

                    <com.view.MTextView
                        android:id="@+id/rideAlterDateTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_15ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="today" />

                    <com.view.MTextView
                        android:id="@+id/rideAlterMsgTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_20ssp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="no ride for this day" />

                    <com.view.MTextView
                        android:id="@+id/rideAlterBtnTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:background="@drawable/menuroundcolorect"
                        android:maxLines="1"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_14"
                        app:customTypeFace="@string/system_medium"
                        tools:text="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_minus5sdp"
                        android:layout_marginEnd="@dimen/_minus5sdp"
                        android:background="@drawable/card_view_23_gray_shadow"
                        android:backgroundTint="@color/gray_light" />

                    <com.view.MTextView
                        android:id="@+id/afterDeparturesHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_15sdp"
                        android:drawableStart="@drawable/ic_down_arrow_23"
                        android:drawablePadding="@dimen/_10sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_bold"
                        app:drawableTint="@color/text23Pro_Light"
                        tools:text="alter Departures" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/listingView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/viewDeparturesArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/viewDeparturesHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_15sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="view Departures" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_minus5sdp"
                        android:layout_marginEnd="@dimen/_minus5sdp"
                        android:background="@drawable/card_view_23_gray_shadow"
                        android:backgroundTint="@color/gray_light" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRideBookSearchList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/viewDeparturesArea"
                    android:clipToPadding="false"
                    android:padding="@dimen/_15sdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_ride_book_search" />

                <LinearLayout
                    android:id="@+id/noDataArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_ride_no_data" />

                    <com.view.MTextView
                        android:id="@+id/noDataTitleTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_51sdp"
                        android:textAlignment="center"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="No Record" />

                    <com.view.MTextView
                        android:id="@+id/noDataMsgTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:textAlignment="center"
                        android:textColor="@color/textSub23Pro_gray"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_regular"
                        tools:text="No Record" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/loading"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <com.view.ErrorView
                    android:id="@+id/errorView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>