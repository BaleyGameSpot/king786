<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbarArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar_include"
                layout="@layout/design_toolbar_general" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomArea"
            android:layout_below="@+id/toolbarArea"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_11sdp"
            android:paddingEnd="@dimen/_11sdp">


            <com.view.MTextView
                android:id="@+id/pick_Up_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/_12ssp"
                app:customTypeFace="@string/system_bold"
                tools:text="Pick Up Location" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_11sdp"
                android:background="@drawable/card_view_23_gray_shadow"
                android:gravity="start"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_14sdp"
                android:paddingBottom="@dimen/_14sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:src="@drawable/ic_location_pro" />


                <com.view.MTextView
                    android:id="@+id/addressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="start"
                    android:maxLines="3"
                    android:textColor="@color/textSub23Pro_gray"
                    android:textSize="@dimen/_11ssp"
                    app:customTypeFace="@string/system_regular"
                    tools:text="Mondeal Square" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pkgArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/packageHtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="start"
                        android:maxLines="1"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="Select Package" />

                    <com.view.MTextView
                        android:id="@+id/packageVtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:gravity="start"
                        android:maxLines="1"
                        android:padding="@dimen/_5sdp"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="gone"
                        app:customTypeFace="@string/system_light" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/card_view_23_gray_shadow"
                    android:orientation="vertical">

                    <com.view.SelectableRoundedImageView
                        android:id="@+id/carTypeImgView"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:sriv_border_width="0dp"
                        app:sriv_left_bottom_corner_radius="25dip"
                        app:sriv_left_top_corner_radius="25dip"
                        app:sriv_oval="true"
                        app:sriv_right_bottom_corner_radius="25dip"
                        app:sriv_right_top_corner_radius="25dip" />

                    <com.view.MTextView
                        android:id="@+id/vehicleTypeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:fontFamily="@string/system_semi_bold"
                        android:gravity="center"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_11ssp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="Basic" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_15sdp"
                        android:background="@drawable/card_view_23_white_shadow">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/packageRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:orientation="vertical"
                            android:scrollbarFadeDuration="0"
                            android:visibility="visible"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_minus15sdp"
            android:background="@drawable/card_view_23_white_top_shadow"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_15sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.view.MTextView
                        android:id="@+id/fareTitletxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="Fare details and rules" />


                    <RelativeLayout
                        android:id="@+id/fareInfoArea"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="0">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_centerInParent="true"
                            android:clickable="false"
                            android:focusable="false"
                            app:srcCompat="@drawable/ic_information"
                            app:tint="@color/appThemeColor_1" />

                    </RelativeLayout>
                </LinearLayout>

                <com.view.MTextView
                    android:id="@+id/fareMsgtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:textColor="@color/textSub23Pro_gray"
                    android:textSize="@dimen/_9ssp"
                    app:customTypeFace="@string/system_regular"
                    tools:text="Extra charges would be appicable upon exceeding time or distance" />

            </LinearLayout>


            <include
                android:id="@+id/acceptBtn"
                layout="@layout/btn_type_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_btn_height"
                android:layout_margin="@dimen/_15sdp" />

        </LinearLayout>
    </RelativeLayout>
</layout>

