<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_frag_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <com.view.MTextView
                android:id="@+id/verifyDocs_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/_13ssp"
                app:customTypeFace="@string/system_bold"
                tools:text="Verify Documents" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/card_view_23_gray_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:background="@drawable/card_view_23_white_shadow"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RvDocuments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_ride_sharing_document" />
                </LinearLayout>

            </LinearLayout>

            <com.view.MTextView
                android:id="@+id/pricingStructure_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/_13ssp"
                app:customTypeFace="@string/system_bold"
                tools:text="Pricing Structure" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/card_view_23_gray_shadow"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <com.view.MTextView
                    android:id="@+id/pricePerHourHtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text23Pro_Dark"
                    android:textSize="@dimen/_11ssp"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="Pricing Structure" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_weight="10"
                    android:background="@drawable/card_view_23_white_line_flat_1"
                    android:clipToOutline="true"
                    android:orientation="horizontal">

                    <com.view.editBox.MaterialEditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="2"
                        android:inputType="number"
                        android:paddingEnd="@dimen/_5sdp"
                        android:textColor="@color/text23Pro_Dark"
                        android:textColorHint="@color/text23Pro_Light"
                        android:textSize="@dimen/_11ssp"
                        app:met_hideUnderline="true"
                        tools:hint="Enter Amount"
                        tools:ignore="NestedWeights" />

                    <com.view.MTextView
                        android:id="@+id/currency_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:background="@drawable/right_radius"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="USD" />

                </LinearLayout>

            </LinearLayout>

            <com.view.MTextView
                android:id="@+id/additionalInfoHtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/_13ssp"
                app:customTypeFace="@string/system_bold"
                tools:text="Additional Information" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/card_view_23_gray_shadow"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <com.view.MTextView
                    android:id="@+id/instructionsHtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text23Pro_Dark"
                    android:textColorHint="@color/text23Pro_Light"
                    android:textSize="@dimen/_11ssp"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="Instructions" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/card_view_23_white_line_flat_1">

                    <com.view.editBox.MaterialEditText
                        android:id="@+id/EtInstructions"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="2"
                        android:gravity="top"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:textColorHint="@color/text23Pro_Light"
                        android:textSize="@dimen/_12ssp"
                        app:met_hideUnderline="true"
                        tools:hint="Enter Amount"
                        tools:ignore="NestedWeights" />

                </LinearLayout>

                <com.view.MTextView
                    android:id="@+id/uploadImagesHtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColor="@color/text23Pro_Dark"
                    android:textSize="@dimen/_11ssp"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="Upload images" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RvUploadImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:listitem="@layout/item_parking_media" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</layout>