<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_top_rounded_bottom_svg"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/closeImg"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_7sdp"
            app:srcCompat="@drawable/ic_close_round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <com.view.MTextView
                android:id="@+id/titleHTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/_17ssp"
                app:customTypeFace="@string/system_bold"
                tools:text="rating &amp; review" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/card_view_23_gray_shadow"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <com.view.MTextView
                    android:id="@+id/nameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:textColor="@color/text23Pro_Dark"
                    android:textSize="@dimen/_13ssp"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="rating &amp; review" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/all_roundcurve_card_food"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_9sdp"
                    android:paddingEnd="@dimen/_9sdp">

                    <com.view.simpleratingbar.SimpleRatingBar
                        android:id="@+id/rideSharingRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:backgroundTint="@color/gray_holo_light"
                        android:gravity="center"
                        app:SRB_fillColor="@color/ratingfill"
                        app:SRB_starBackgroundColor="@color/gray_holo_light"
                        app:SRB_starSize="@dimen/_30sdp"
                        app:SRB_stepSize="0.5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:background="@drawable/card_view_23_white_shadow"
                        android:padding="@dimen/_9sdp">

                        <com.view.editBox.MaterialEditText
                            android:id="@+id/EtReview"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:gravity="top"
                            android:textSize="@dimen/_10ssp"
                            app:met_hideUnderline="true"
                            app:met_textColor="@color/text23Pro_Dark"
                            app:met_textColorHint="@color/text23Pro_Light"
                            tools:hint="Tell us what you liked..." />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <include
                        android:id="@+id/sendRatingBtn"
                        layout="@layout/btn_type_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_btn_height" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>