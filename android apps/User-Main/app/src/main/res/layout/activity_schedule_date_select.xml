<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activityBg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar_include"
                layout="@layout/design_toolbar_general" />

            <LinearLayout
                android:id="@+id/dataArea"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/headerTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:gravity="start|center"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_16ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="@string/app_name" />

                    <com.view.MTextView
                        android:id="@+id/addressTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:gravity="start|center"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_16ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="Address" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/monthTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:gravity="start"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_15ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="@string/app_name" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvDates"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:clipToPadding="false"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/_11sdp"
                            android:paddingEnd="@dimen/_11sdp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_dates_design" />

                        <com.view.MTextView
                            android:id="@+id/timeHTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:gravity="start"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="@string/app_name" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvTimeSlot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:paddingStart="@dimen/_11sdp"
                            android:paddingEnd="@dimen/_11sdp"
                            android:scrollbarFadeDuration="0"
                            android:scrollbars="vertical"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="3"
                            tools:listitem="@layout/item_timeslot_view" />
                    </LinearLayout>
                </LinearLayout>

                <include
                    android:id="@+id/continueBtn"
                    layout="@layout/btn_type_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_btn_height"
                    android:layout_margin="@dimen/_15sdp" />
            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/loadingAvailBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</layout>
