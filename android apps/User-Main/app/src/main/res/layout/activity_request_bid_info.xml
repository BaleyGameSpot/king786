<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/design_toolbar_general" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnArea"
            android:layout_below="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/card_view_23_gray_shadow"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <com.view.MTextView
                    android:id="@+id/categoryHTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/text23Pro_Dark"
                    android:textSize="@dimen/_13ssp"
                    app:customTypeFace="@string/system_bold"
                    tools:text="@string/app_name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.view.MTextView
                            android:id="@+id/locationHTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="location" />

                        <com.view.MTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/star"
                            android:textColor="@color/redStar"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_minus1sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/card_view_23_white_shadow">

                        <com.view.MTextView
                            android:id="@+id/locationTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:drawableEnd="@drawable/ic_down_arrow_23"
                            android:ellipsize="end"
                            android:gravity="start|center"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:textColor="@color/text23Pro_Dark"
                            android:textColorHint="@color/text23Pro_Light"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_regular"
                            tools:hint="select" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.view.MTextView
                            android:id="@+id/budgetHTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="budget" />

                        <com.view.MTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/star"
                            android:textColor="@color/redStar"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/card_view_23_white_shadow"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <com.view.AutoFitEditText
                            android:id="@+id/budgetBox"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_27sdp"
                            android:layout_marginStart="@dimen/_11sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginEnd="@dimen/_11sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_weight="4"
                            android:background="@color/white"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/_13ssp"
                            app:customTypeFace="@string/system_regular"
                            tools:hint="Enter Amount" />

                        <com.view.MTextView
                            android:id="@+id/budgetCurrency"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/right_radius"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            tools:text="USD" />
                    </LinearLayout>
                </LinearLayout>

                <com.view.MTextView
                    android:id="@+id/bidAdditionalNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/redStar"
                    android:textSize="@dimen/_9ssp"
                    android:visibility="gone"
                    app:customTypeFace="@string/system_regular"
                    tools:text="Note : After confirming any provider, an additional tax will be applicable." />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_63sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/card_view_23_white_shadow">

                    <com.view.editBox.MaterialEditText
                        android:id="@+id/taskDetailsMsgBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_11sdp"
                        android:layout_marginEnd="@dimen/_11sdp"
                        android:gravity="start"
                        android:textColor="@color/text23Pro_Light"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_light"
                        app:met_hideUnderline="true"
                        tools:hint="Enter Message" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.view.MTextView
                            android:id="@+id/dateTimeHTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="date &amp; time" />

                        <com.view.MTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/star"
                            android:textColor="@color/redStar"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_minus1sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/card_view_23_white_shadow">

                        <com.view.MTextView
                            android:id="@+id/dateTimeEditBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:drawableEnd="@drawable/ic_calendar"
                            android:ellipsize="end"
                            android:gravity="start|center"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text23Pro_Dark"
                            android:textColorHint="@color/text23Pro_Light"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_regular"
                            tools:hint="select date &amp; time" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/additionalMediaArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/additionalMediaHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="additional media" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/bidAdditionalMediaRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_bid_additional_media" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/btnArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/card_view_23_white_top_shadow"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="@dimen/_15sdp">

            <include
                android:id="@+id/bidCancelBtn"
                layout="@layout/btn_type_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <include
                android:id="@+id/bidPostBtn"
                layout="@layout/btn_type_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout>
</layout>