<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/activity_accountverification"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/submitBtnLL"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/imgClose"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="end"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:srcCompat="@drawable/ic_clear" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_15sdp">

                <ImageView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_forget_pass" />

                <com.view.MTextView
                    android:id="@+id/forgotpasswordHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="@dimen/_21ssp"
                    android:visibility="visible"
                    app:customTypeFace="@string/system_medium" />

                <com.view.MTextView
                    android:id="@+id/forgotpasswordNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:textColor="#646464"
                    android:textSize="@dimen/_11ssp"
                    app:customTypeFace="@string/system_light" />

                <LinearLayout
                    android:id="@+id/emailarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/card_view_23_gray_shadow"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_9sdp">

                    <com.view.MTextView
                        android:id="@+id/mobileBoxHTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_13sdp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="user phone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@drawable/card_view_23_white_shadow"
                        android:gravity="start|center_vertical"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:animateLayoutChanges="true"
                        android:paddingBottom="@dimen/_5sdp">

                        <LinearLayout
                            android:id="@+id/yearSelectArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.view.SelectableRoundedImageView
                                android:id="@+id/countryimage"
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/ic_card_default"
                                app:sriv_border_width="1dp"
                                app:sriv_left_bottom_corner_radius="0dip"
                                app:sriv_left_top_corner_radius="0dip"
                                app:sriv_border_color="#30000000"
                                app:sriv_oval="false"
                                app:sriv_right_bottom_corner_radius="0dip"
                                app:sriv_right_top_corner_radius="0dip"
                                />

                            <com.view.editBox.MaterialEditText
                                android:id="@+id/countryBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:includeFontPadding="false"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_13ssp"
                                app:customTypeFace="@string/system_regular"
                                app:met_hideUnderline="true"
                                tools:text="+91" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/countrydropimage"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_gravity="center|end"
                                android:layout_marginStart="@dimen/_2sdp"
                                app:srcCompat="@drawable/ic_down_arrow"
                                app:tint="@color/text23Pro_Light" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view_div"
                            android:layout_width="0.7dp"
                            android:layout_height="@dimen/_20ssp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:background="@color/text23Pro_Light" />

                        <com.view.editBox.MaterialEditText
                            android:id="@+id/emailBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.70"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_13ssp"
                            app:customTypeFace="@string/system_regular"
                            app:met_hideUnderline="true"
                            tools:hint="enter number" />

                    </LinearLayout>
                    <com.view.MTextView
                        android:id="@+id/errorTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:customTypeFace="@string/system_light"
                        tools:text="user phone" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/submitBtnLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="end">

            <LinearLayout
                android:id="@+id/btnArea"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_btn_height"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/btn_border_1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.view.MTextView
                    android:id="@+id/btnTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="submit"
                    android:textAllCaps="true"
                    android:textColor="@color/appThemeColor_TXT_1"
                    android:textSize="@dimen/_15ssp"
                    android:visibility="visible"
                    app:customTypeFace="@string/system_medium" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</layout>

