<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/parentArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/appThemeColor_Full_Light"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/backBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_11sdp"
                            android:layout_marginTop="@dimen/_9sdp"
                            android:padding="@dimen/_6sdp"
                            android:rotation="180"
                            app:srcCompat="@drawable/ic_right_arrow_1"
                            app:tint="@color/text23Pro_Dark_1" />

                        <com.view.MTextView
                            android:id="@+id/imageHeaderTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_50sdp"
                            android:textAlignment="center"
                            android:textColor="@color/text23Pro_Dark_1"
                            android:textSize="@dimen/_15ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="you pick of rides at low prices gdfgdfgdfg" />
                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgBanner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_40sdp"
                        android:layout_marginBottom="@dimen/_42sdp"
                        app:srcCompat="@drawable/ic_ride_book_pro" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_minus45sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/card_view_23_white_shadow"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_15sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="0dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                app:srcCompat="@drawable/ic_point_pickup" />

                            <com.view.DividerView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layerType="software"
                                app:dividerColor="@color/view23ProBG"
                                app:dividerDashGap="0dp"
                                app:dividerDashLength="0dp"
                                app:dividerOrientation="vertical" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                app:srcCompat="@drawable/ic_point_dropoff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.view.MTextView
                                    android:id="@+id/startLocationBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:ellipsize="end"
                                    android:gravity="start|center"
                                    android:includeFontPadding="false"
                                    android:singleLine="true"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/text23Pro_Dark"
                                    android:textColorHint="@color/text23Pro_Light"
                                    android:textSize="@dimen/_12ssp"
                                    app:customTypeFace="@string/system_regular"
                                    tools:hint="leaving from" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:background="@color/view23ProBG" />

                                <LinearLayout
                                    android:id="@+id/locationFlipArea"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:gravity="center">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_22sdp"
                                        android:background="@color/white"
                                        app:srcCompat="@drawable/ic_flip_circle"
                                        tools:ignore="TooDeepLayout" />
                                </LinearLayout>
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.view.MTextView
                                    android:id="@+id/endLocationBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_8sdp"
                                    android:ellipsize="end"
                                    android:gravity="start|center"
                                    android:includeFontPadding="false"
                                    android:singleLine="true"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/text23Pro_Dark"
                                    android:textColorHint="@color/text23Pro_Light"
                                    android:textSize="@dimen/_12ssp"
                                    app:customTypeFace="@string/system_regular"
                                    tools:hint="going to" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.view.MTextView
                                android:id="@+id/dateTimeHTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_bold"
                                tools:text="date &amp; time" />

                            <com.view.MTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" *"
                                android:textColor="@color/redStar"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_minus1sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/card_view_23_white_shadow">

                            <com.view.MTextView
                                android:id="@+id/dateTimeEditBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:drawableEnd="@drawable/ic_calendar"
                                android:ellipsize="end"
                                android:gravity="start|center"
                                android:includeFontPadding="false"
                                android:singleLine="true"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Dark_1"
                                android:textColorHint="@color/text23Pro_Light"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_regular"
                                app:drawableTint="@color/text23Pro_Dark_1"
                                tools:hint="selecte date &amp; time" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.view.MTextView
                                android:id="@+id/personHTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text23Pro_Dark_1"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_bold"
                                tools:text="person" />

                            <com.view.MTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" *"
                                android:textColor="@color/redStar"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_minus1sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/card_view_23_white_shadow">

                            <com.view.MTextView
                                android:id="@+id/personSeatTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:drawableEnd="@drawable/ic_down_arrow_23"
                                android:ellipsize="end"
                                android:gravity="start|center"
                                android:includeFontPadding="false"
                                android:singleLine="true"
                                android:textColor="@color/text23Pro_Dark_1"
                                android:textColorHint="@color/text23Pro_Light"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_regular"
                                app:drawableTint="@color/text23Pro_Dark_1"
                                tools:hint="select" />
                        </LinearLayout>

                        <include
                            android:id="@+id/searchBtn"
                            layout="@layout/btn_type_1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/all_btn_height"
                            android:layout_marginTop="@dimen/_15sdp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp">

                    <com.view.MTextView
                        android:id="@+id/recentlyPostHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text23Pro_Dark_1"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="recently post ride" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRecentlyRidePostList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_ride_pro_recent_post_rides" />

                    <ProgressBar
                        android:id="@+id/loading"
                        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <com.view.MTextView
                        android:id="@+id/noDataTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="No Record" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>