<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/design_toolbar_general" />

        <!--
        <include
            android:id="@+id/toolbar_include"
            layout="@layout/design_toolbar_multi" />-->

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/contentArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/mainContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/mapFragmentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <FrameLayout
                    android:id="@+id/bottomArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:gravity="bottom|center"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <LinearLayout
                        android:id="@+id/innerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom|center"
                        android:gravity="end|bottom|center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_75sdp">


                            <com.view.CircularImageView
                                android:id="@+id/iv_current_loc"
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_alignWithParentIfMissing="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="@dimen/_14sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                app:civ_border="true"
                                app:civ_border_color="@color/transparent_full"
                                app:civ_border_width="0dp"
                                app:civ_shadow="true"
                                app:civ_shadow_color="@color/text23Pro_Dark"
                                app:civ_shadow_gravity="center"
                                app:civ_shadow_radius="@dimen/_1sdp"
                                app:srcCompat="@drawable/ic_location_coordinate" />


                            <ImageView
                                android:id="@+id/iv_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="15dp"
                                android:src="@mipmap/arrow_sliding_up"
                                android:visibility="visible" />


                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/subLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="end|bottom|center"
                            android:background="@drawable/ic_top_rounded_svg"
                            android:gravity="end|bottom|center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:layout_weight="1"
                                android:background="@drawable/card_view_23_white_shadow"
                                android:orientation="vertical">

                                <androidx.core.widget.NestedScrollView
                                    android:id="@+id/sv_main"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:scrollbars="none"
                                    app:layout_behavior="@string/appbar_scrolling_view_behavior">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/destRecyclerView"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:descendantFocusability="blocksDescendants"
                                            android:overScrollMode="never"
                                            android:paddingStart="@dimen/_11sdp">

                                        </androidx.recyclerview.widget.RecyclerView>


                                    </LinearLayout>

                                </androidx.core.widget.NestedScrollView>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btnArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_15sdp">

                                <include
                                    android:id="@+id/nextbtn"
                                    layout="@layout/btn_type_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/all_btn_height" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </FrameLayout>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@color/appThemeColor_1" />

                <include
                    android:id="@+id/headerArea"
                    layout="@layout/multi_tab_design_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>