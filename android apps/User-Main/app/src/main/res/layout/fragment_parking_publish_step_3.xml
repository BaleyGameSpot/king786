<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.view.MTextView
            android:id="@+id/selectDayHtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/text23Pro_Dark"
            android:textSize="@dimen/_13ssp"
            app:customTypeFace="@string/system_bold"
            tools:text="Select Day" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/datesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_15sdp"
            tools:itemCount="1"
            tools:listitem="@layout/item_dates_design_parking" />

        <com.view.MTextView
            android:id="@+id/selectTimeHtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/text23Pro_Dark"
            android:textSize="@dimen/_13ssp"
            app:customTypeFace="@string/system_bold"
            tools:text="Select Time" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/timeSlotsRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            tools:listitem="@layout/item_timeslot_view_parking" />


    </LinearLayout>
</layout>