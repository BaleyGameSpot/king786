<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/mainArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/cardViewBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_view_23_gray_flat"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/_46sdp"
                            android:layout_height="@dimen/_46sdp"
                            android:layout_marginStart="@dimen/_minus7sdp"
                            android:layout_marginTop="@dimen/_minus9sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/shape_circle_record"
                            android:backgroundTint="@color/white">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgCategory"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:padding="@dimen/_12sdp"
                                app:srcCompat="@mipmap/ic_no_icon" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/txtTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:paddingStart="@dimen/_4sdp"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_3sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:textAlignment="textStart"
                                tools:text="@string/app_name" />

                            <com.view.MTextView
                                android:id="@+id/subTextArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_4sdp"
                                android:textAlignment="textStart"
                                tools:text="saffsd fjsdgf dgfusygdfhbejwerguebhd fsdgfudsytfgsd gdgfusdg fuegfu gyew87rhfgbdugfds uyrt" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.view.MTextView
                        android:id="@+id/subTextFullArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        tools:text="saffsd fjsdgf dgfusygdfhbejwerguebhd fsdgfudsytfgsd gdgfusdg fuegfu gyew87rhfgbdugfds uyrt" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvServices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_10sdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_23_service_list_item" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>