<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/appThemeColor_1"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|enterAlways">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/menuImgView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0"
                    android:clickable="true"
                    android:padding="@dimen/_8sdp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_menu"
                    app:tint="@color/white" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/backImgView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:visibility="visible"
                    app:srcCompat="@mipmap/ic_back_arrow"
                    app:tint="@color/appThemeColor_TXT_1" />

                <com.view.MTextView
                    android:id="@+id/appNameTxt"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_minus2sdp"
                    android:minHeight="@dimen/_24sdp"
                    android:text="@string/APP_TYPE_NAME"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_13ssp"
                    android:visibility="gone"
                    app:customTypeFace="@string/system_bold"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewArrow"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:padding="@dimen/_10sdp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_arrow_upward_white_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/titleTxt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingStart="@dimen/_32sdp"
                        android:paddingEnd="@dimen/_32sdp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/appThemeColor_TXT_1"
                        android:textSize="@dimen/txt_size_15"
                        app:customTypeFace="@string/system_medium" />

                    <com.view.MTextView
                        android:id="@+id/subtitleTxt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="@color/appThemeColor_TXT_1"
                        android:textSize="@dimen/txt_size_18"
                        android:visibility="gone"
                        app:customTypeFace="@string/system_light" />

                    <com.view.MTextView
                        android:id="@+id/chatsubtitleTxt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="-5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/appThemeColor_TXT_1"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="gone"
                        app:customTypeFace="@string/system_regular" />
                </LinearLayout>

                <com.view.MTextView
                    android:id="@+id/subTitleTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text=""
                    android:textAlignment="viewEnd"
                    android:textColor="@color/appThemeColor_TXT_1"
                    android:textSize="@dimen/txt_size_16"
                    android:visibility="gone"
                    app:customTypeFace="@string/system_light" />

                <com.view.MTextView
                    android:id="@+id/rightTitleTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="ssss"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/appThemeColor_TXT_1"
                    android:textSize="@dimen/txt_size_14"
                    android:visibility="gone"
                    app:customTypeFace="@string/system_medium" />

                <com.view.MTextView
                    android:id="@+id/addVehicleTxtView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/mdtp_white"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:customTypeFace="@string/system_light" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/rightImgView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_plus"
                    app:tint="@color/white"
                    tools:ignore="VectorDrawableCompat" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/receiptImgView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_receipt"
                    app:tint="@color/white"
                    tools:ignore="VectorDrawableCompat" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/searchImgView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_search_black_24dp"
                    app:tint="@color/white"
                    tools:ignore="VectorDrawableCompat" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/refreshImgView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_refresh"
                    app:tint="@color/white"
                    tools:ignore="VectorDrawableCompat" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/logoutImageview"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_menu_logout"
                    app:tint="@color/appThemeColor_TXT_1" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/filterImageview"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="0"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_filter"
                    app:tint="@color/appThemeColor_TXT_1" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
</layout>