<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/mainArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/cardViewBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_view_23_gray_flat">

            <com.view.MTextView
                android:id="@+id/anchorView"
                android:layout_width="@dimen/_3sdp"
                android:layout_height="match_parent"
                android:background="@drawable/curved_shape"
                android:backgroundTint="@color/appThemeColor_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/anchorView">

                <com.view.MTextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:paddingStart="@dimen/_7ssp"
                    android:paddingTop="@dimen/_7ssp"
                    android:paddingEnd="@dimen/_7ssp"
                    android:textAlignment="textStart"
                    android:textColor="@color/red"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="dgsdhsjdjsadgh sgdasgdjsaghd sdgasgdjgs sgdasdgsahd sgdasjdjgas sgdasgdjgsad sgdxcbzxcbmbmzxsgjdgasdgsadgj cxbb" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/txtTitle"
                    android:orientation="horizontal"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:id="@+id/subTextArea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6">

                        <com.view.MTextView
                            android:id="@+id/txtSubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:paddingStart="@dimen/_7sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="@dimen/_7sdp"
                            android:textAlignment="textStart"
                            android:textColor="@color/red"
                            app:customTypeFace="@string/system_regular"
                            tools:text="fsdfgsdhfgsdhfgsdffsdfgsdhfgsdhfgsdf sfsdjfgsdgfsdgfhsgdvsdb dsafsdfdsfdsdsvdhsdgds ccascasasccdsfdv hsdfhsdhsfhsdvbsdhgf sdsdasfsdafdsa sdfsdfsdfsdf sfsdjfgsdgfsdgfhsgdvsdb dsafsdfdsfdsdsvdhsdgds ccascasasccdsfdv hsdfhsdhsfhsdvbsdhgf sdsdasfsdafdsa sdfsdfsdfsdf sfsdjfgsdgfsdgfhsgdvsdb dsafsdfdsfdsdsvdhsdgds ccascasasccdsfdv hsdfhsdhsfhsdvbsdhgf sdsdasfsdafdsa sdfsdfsdfsdf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom|end"
                        android:layout_weight="4"
                        android:gravity="bottom|end">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/sImgView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitEnd"
                            app:srcCompat="@mipmap/ic_no_icon" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <com.view.MTextView
                android:id="@+id/txtPromotionalTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/curved_shape"
                android:backgroundTint="@color/appThemeColor_1"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_7sdp"
                app:customTypeFace="@string/system_semi_bold"
                tools:ignore="RelativeOverlap"
                tools:text="Promotional Tag" />
        </RelativeLayout>
    </RelativeLayout>
</layout>