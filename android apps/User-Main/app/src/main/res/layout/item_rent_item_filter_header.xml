<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.view.MTextView
                android:id="@+id/titleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_15ssp"
                android:paddingTop="@dimen/_11sdp"
                android:paddingEnd="@dimen/_15ssp"
                android:paddingBottom="@dimen/_7ssp"
                android:textAlignment="viewStart"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/_14ssp"
                app:customTypeFace="@string/system_bold"
                tools:text="@string/app_name" />

            <View
                android:id="@+id/shadowHeaderView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_4sdp"
                android:background="@drawable/custom_shadow_header_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/subItemView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/card_view_23_gray_shadow">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_11sdp"
                android:background="@drawable/card_view_23_white_shadow">

                <LinearLayout
                    android:id="@+id/serviceSelectArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>