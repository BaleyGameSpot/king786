<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/design_toolbar_general" />

        <RelativeLayout
            android:id="@+id/mainDetailArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar_include">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.view.MTextView
                        android:id="@+id/requestReplayHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="Ride Date: " />

                    <com.view.MTextView
                        android:id="@+id/requestReplayTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_regular"
                        tools:text="Fri 16 december 06:02 PM" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/card_view_23_gray_shadow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/card_view_23_white_shadow">

                        <LinearLayout
                            android:id="@+id/summaryData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/card_view_23_white_top_shadow"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/totalHTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            app:customTypeFace="@string/system_bold"
                            tools:text="total price" />

                        <com.view.MTextView
                            android:id="@+id/noOfPassengerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textSub23Pro_gray"
                            android:textSize="@dimen/_13sdp"
                            app:customTypeFace="@string/system_regular"
                            tools:text="for 1 passenger" />
                    </LinearLayout>

                    <com.view.MTextView
                        android:id="@+id/fPriceTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/_15sdp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="$ 77.00" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    tools:visibility="visible"
                    android:id="@+id/bottomArea"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:baselineAligned="false"
                    android:elevation="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/payArea"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/all_btn_height"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/unselected_border">

                        <LinearLayout
                            android:id="@+id/paymentArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:gravity="center"
                            tools:ignore="UselessParent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/errorImage"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                app:srcCompat="@drawable/error_cash_card" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/payImgView"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_money_cash"
                                app:tint="@color/appThemeColor_1" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/organizationArea"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.view.MTextView
                                        android:id="@+id/organizationTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="10dp"
                                        android:clickable="false"
                                        android:gravity="start|center"
                                        android:includeFontPadding="false"
                                        android:textAlignment="viewStart"
                                        android:textColor="#6d6d6d"
                                        android:textSize="@dimen/_11ssp"
                                        app:customTypeFace="@string/system_regular"
                                        tools:text="Personal" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="5dp"
                                        android:visibility="gone">

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:layout_width="@dimen/_8sdp"
                                            android:layout_height="@dimen/_8sdp"
                                            android:layout_gravity="center"
                                            android:clickable="false"
                                            app:srcCompat="@drawable/ic_down_arrow" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.view.MTextView
                                        android:id="@+id/payTypeTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="10dp"
                                        android:clickable="false"
                                        android:gravity="start|center"
                                        android:includeFontPadding="false"
                                        android:textAlignment="viewStart"
                                        android:textColor="#2f2f2f"
                                        android:textSize="@dimen/_9ssp"
                                        app:customTypeFace="@string/system_bold"
                                        tools:text="Cash" />

                                    <LinearLayout
                                        android:id="@+id/showDropDownArea"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:visibility="gone">

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:layout_width="@dimen/_8sdp"
                                            android:layout_height="@dimen/_8sdp"
                                            android:layout_gravity="center"
                                            android:clickable="false"
                                            android:gravity="center"
                                            app:srcCompat="@drawable/ic_down_arrow" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/submitBtnArea"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/continueBtn"
                            layout="@layout/btn_type_1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/all_btn_height" />
                    </LinearLayout>
                </LinearLayout>

                <!--<include
                    android:id="@+id/continueBtn"
                    layout="@layout/btn_type_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_btn_height"
                    android:layout_marginTop="@dimen/_15sdp" />-->
            </LinearLayout>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/loading"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</layout>