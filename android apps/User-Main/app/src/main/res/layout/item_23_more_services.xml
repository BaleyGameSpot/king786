<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/contentArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="@dimen/_3sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingBottom="@dimen/_7sdp">

            <com.view.SelectableRoundedImageView
                android:id="@+id/catImgView"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/ic_launcher"
                app:sriv_border_color="@color/cardView23ProBG"
                app:sriv_border_width="1dp"
                app:sriv_left_bottom_corner_radius="@dimen/_5sdp"
                app:sriv_left_top_corner_radius="@dimen/_5sdp"
                app:sriv_oval="false"
                app:sriv_right_bottom_corner_radius="@dimen/_5sdp"
                app:sriv_right_top_corner_radius="@dimen/_5sdp" />

            <com.utils.NonBreakingPeriodTextView
                android:id="@+id/catNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ellipsize="end"
                android:ems="3"
                android:focusable="false"
                android:gravity="center|top"
                android:maxLines="2"
                android:minLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                app:customTypeFace="@string/system_semi_bold"
                tools:text="Taxifdsfdffsdfsdfdsfsddsfsdfsdfsdfsdfsd\ntaxi" />

            <com.utils.NonBreakingPeriodTextView
                android:id="@+id/catDescTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ellipsize="end"
                android:ems="3"
                android:focusable="false"
                android:gravity="center|top"
                android:maxLines="3"
                android:minLines="3"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:customTypeFace="@string/system_regular"
                tools:text="Taxifdsfdffsdfsdfdsfsddsfsdfsdfsdfsdfsd\ntaxi" />
        </LinearLayout>
    </LinearLayout>
</layout>