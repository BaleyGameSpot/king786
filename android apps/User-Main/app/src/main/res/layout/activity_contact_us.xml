<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarInclude"
            layout="@layout/toolbar_type_1" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:srcCompat="@drawable/ic_contacus" />

                <com.view.MTextView
                    android:id="@+id/subHeaderTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:textColor="@color/text23Pro_Dark"
                    android:textSize="@dimen/_18ssp"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="@string/app_name" />

                <com.view.MTextView
                    android:id="@+id/detailTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textAlignment="center"
                    android:textColor="@color/eme_txt_color"
                    android:textSize="@dimen/_12ssp"
                    app:customTypeFace="@string/system_regular"
                    tools:text="@string/app_name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/card_view_23_gray_shadow"
                    android:orientation="vertical"
                    android:padding="@dimen/_11sdp">

                    <com.view.MTextView
                        android:id="@+id/subjectBoxTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12sdp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="@string/app_name" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/card_view_23_white_shadow">

                        <com.view.editBox.MaterialEditText
                            android:id="@+id/subjectBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:textSize="@dimen/_13ssp"
                            app:customTypeFace="@string/system_regular"
                            app:met_hideUnderline="true"
                            app:met_textColor="@color/text23Pro_Dark"
                            app:met_textColorHint="@color/text23Pro_Light" />
                    </RelativeLayout>

                    <com.view.MTextView
                        android:id="@+id/subjectBoxError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="invisible"
                        app:customTypeFace="@string/system_light"
                        tools:text="Field is required."
                        tools:visibility="visible" />

                    <com.view.MTextView
                        android:id="@+id/contentBoxTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12sdp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="@string/app_name" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/card_view_23_white_shadow">

                        <com.view.editBox.MaterialEditText
                            android:id="@+id/contentBox"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:textSize="@dimen/_13ssp"
                            app:customTypeFace="@string/system_regular"
                            app:met_hideUnderline="true"
                            app:met_textColor="@color/text23Pro_Dark"
                            app:met_textColorHint="@color/text23Pro_Light" />
                    </RelativeLayout>

                    <com.view.MTextView
                        android:id="@+id/contentBoxError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="invisible"
                        app:customTypeFace="@string/system_light"
                        tools:text="Field is required."
                        tools:visibility="visible" />

                    <include
                        android:id="@+id/sendBtn"
                        layout="@layout/btn_type_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_btn_height"
                        android:layout_marginTop="@dimen/_11sdp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>