<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <FrameLayout
                android:id="@+id/dialogImgAlpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_6sdp">

                <LinearLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/ic_circle"
                    android:gravity="center"
                    tools:ignore="UselessParent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="@dimen/_27sdp"
                        android:layout_height="@dimen/_27sdp"
                        app:srcCompat="@drawable/ic_correct_2" />
                </LinearLayout>
            </FrameLayout>

            <com.view.MTextView
                android:id="@+id/titleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_11sdp"
                android:maxLines="1"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/_16ssp"
                app:customTypeFace="@string/system_medium"
                tools:text="@string/app_name" />

            <com.view.MTextView
                android:id="@+id/msgTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:maxLines="1"
                android:textColor="@color/textSub23Pro_gray"
                android:textSize="@dimen/_15ssp"
                app:customTypeFace="@string/system_light"
                tools:text="@string/app_name" />

            <com.view.MTextView
                android:id="@+id/priceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:textColor="@color/appThemeColor_1"
                android:textSize="@dimen/_27ssp"
                app:customTypeFace="@string/system_medium"
                tools:text="$ 2.20" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/sucess_border"
                android:minWidth="@dimen/_150sdp">

                <com.view.SelectableRoundedImageView
                    android:id="@+id/UserImgView"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_no_pic_user"
                    app:sriv_border_color="@color/gray"
                    app:sriv_left_bottom_corner_radius="10dip"
                    app:sriv_left_top_corner_radius="10dip"
                    app:sriv_oval="true"
                    app:sriv_right_bottom_corner_radius="10dip"
                    app:sriv_right_top_corner_radius="10dip" />

                <com.view.MTextView
                    android:id="@+id/nametxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:textColor="@color/text23Pro_Dark"
                    android:textSize="@dimen/_13ssp"
                    app:customTypeFace="@string/system_medium"
                    tools:text="sd ame" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_35sdp"
                android:gravity="center"
                android:orientation="vertical">

                <com.view.MTextView
                    android:id="@+id/transDateTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/homeDeSelectColor_23"
                    android:textSize="@dimen/_12ssp"
                    app:customTypeFace="@string/system_light"
                    tools:text="@string/app_name" />

                <com.view.MTextView
                    android:id="@+id/transDateValTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/text23Pro_Dark"
                    android:textSize="@dimen/_12ssp"
                    app:customTypeFace="@string/system_medium"
                    tools:text="@string/app_name" />
            </LinearLayout>

            <include
                android:id="@+id/btn_type2"
                layout="@layout/btn_type_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_btn_height"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/_10sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>