<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/design_toolbar_general" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/profile_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_50sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@drawable/card_view_23_gray_shadow">

                            <RelativeLayout
                                android:id="@+id/fragContainer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:padding="10dp" />
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/userImgArea"
                            android:layout_width="@dimen/_85sdp"
                            android:layout_height="@dimen/_85sdp"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center">

                            <com.view.SelectableRoundedImageView
                                android:id="@+id/userProfileImgView"
                                android:layout_width="@dimen/_85sdp"
                                android:layout_height="@dimen/_85sdp"
                                app:sriv_border_color="@color/white"
                                app:sriv_border_width="2dip"
                                app:sriv_left_bottom_corner_radius="20dip"
                                app:sriv_left_top_corner_radius="20dip"
                                app:sriv_oval="true"
                                app:sriv_right_bottom_corner_radius="20dip"
                                app:sriv_right_top_corner_radius="20dip" />

                            <RelativeLayout
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="bottom|end">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/editIconImgView"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/ic_edit_icon" />
                            </RelativeLayout>
                        </FrameLayout>

                    </RelativeLayout>


                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/profilePhotoDialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mdtp_transparent_black"
                android:gravity="bottom"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/top_curve_card"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_20sdp">

                    <com.view.MTextView
                        android:id="@+id/profilePhotoHTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/_15ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="Profile photo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:alpha="0.2"
                        android:background="@color/commonText_Light" />

                    <com.view.MTextView
                        android:id="@+id/disclosureTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:gravity="start"
                        android:textSize="@dimen/_12ssp"
                        tools:text="Your profile photo is visible to everyone across Our Products" />

                    <include
                        android:id="@+id/btn_type2"
                        layout="@layout/btn_type_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_btn_height"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_15sdp" />

                    <com.view.MTextView
                        android:id="@+id/cancelTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:gravity="center"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="Cancel" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</layout>
