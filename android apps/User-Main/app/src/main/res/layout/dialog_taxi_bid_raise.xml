<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_top_rounded_bottom_svg"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <com.view.MTextView
            android:id="@+id/headerTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_7sdp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/text23Pro_Dark"
            android:textSize="@dimen/_15ssp"
            app:customTypeFace="@string/system_bold"
            tools:text="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp">

            <com.view.MTextView
                android:id="@+id/minFareMsgTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/_12ssp"
                app:customTypeFace="@string/system_medium"
                tools:text="finding driver" />
        </LinearLayout>

        <include
            android:id="@+id/raiseToBtn"
            layout="@layout/btn_type_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp" />

        <com.view.MTextView
            android:id="@+id/cancelBtnTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_7sdp"
            android:textAlignment="center"
            android:textColor="@color/text23Pro_Dark"
            android:textSize="@dimen/_13ssp"
            app:customTypeFace="@string/system_semi_bold"
            tools:text="cancel" />
    </LinearLayout>
</layout>