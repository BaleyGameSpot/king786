<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/design_toolbar_general" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/mapLiveTrackingContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/userLocBtnImgView"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/circle_shadow_big"
                app:srcCompat="@drawable/ic_cordinate" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_minus5sdp"
            android:layout_marginBottom="@dimen/_minus4sdp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="start|center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        app:srcCompat="@drawable/ic_live_track_marker"
                        app:tint="@color/appThemeColor_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/txtLiveTrackTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:singleLine="true"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_14ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="Live Tracking" />

                        <com.view.MTextView
                            android:id="@+id/txtLiveTrackSubTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:singleLine="true"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_10ssp"
                            app:customTypeFace="@string/system_regular"
                            tools:text="Last Location Updated at : 10 minutes ago" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.view.SelectableRoundedImageView
                        android:id="@+id/imvUser"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        app:sriv_border_color="@color/textSub23Pro_gray"
                        app:sriv_border_width="1dp"
                        app:sriv_oval="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/txtUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:maxLines="1"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="G M" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:gravity="start|center"
                            android:orientation="horizontal">

                            <com.view.MTextView
                                android:id="@+id/txtLblStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:maxLines="1"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_11ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="Tracking Status: " />

                            <com.view.MTextView
                                android:id="@+id/txtStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:maxLines="1"
                                android:paddingStart="@dimen/_2sdp"
                                android:paddingEnd="@dimen/_2sdp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/textSub23Pro_gray"
                                android:textSize="@dimen/_11ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="Off" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgStatus"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_checkmark"
                                app:tint="@color/green_1" />
                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:gravity="start|center"
                            android:orientation="horizontal">

                            <com.view.MTextView
                                android:id="@+id/txtGpsLblStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:maxLines="1"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_11ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="GPS Status: " />

                            <com.view.MTextView
                                android:id="@+id/txtGpsStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:maxLines="1"
                                android:paddingStart="@dimen/_2sdp"
                                android:paddingEnd="@dimen/_2sdp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/textSub23Pro_gray"
                                android:textSize="@dimen/_11ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="Off" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/txtCallArea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selected_border"
                        android:backgroundTint="@color/appThemeColor_1"
                        android:gravity="center">

                        <com.view.MTextView
                            android:id="@+id/txtCall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:drawableStart="@drawable/ic_call_fill"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            app:drawableTint="@color/white"
                            tools:text="Call Driver" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/unselected_border"
                        android:backgroundTint="@color/appThemeColor_1"
                        android:gravity="center">

                        <com.view.MTextView
                            android:id="@+id/navigationTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_gmap_direction_icon"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/_11ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            app:drawableTint="@color/appThemeColor_1"
                            tools:text="Navigation" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>