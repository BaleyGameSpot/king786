<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_20sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/parking_marker" />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <com.view.MTextView
            android:id="@+id/priceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_3sdp"
            android:textColor="@color/text23Pro_Dark"
            android:textSize="@dimen/_7ssp"
            app:customTypeFace="@string/system_semi_bold"
            tools:text="$20" />

        <com.view.MTextView
            android:id="@+id/perHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/_3sdp"
            android:textColor="@color/text23Pro_Light"
            android:textSize="@dimen/_7ssp"
            app:customTypeFace="@string/system_regular"
            tools:text="/hour" />
    </LinearLayout>

</RelativeLayout>