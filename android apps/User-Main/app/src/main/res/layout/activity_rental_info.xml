<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/design_toolbar_general" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/toolbar_include"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rentContentArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/card_view_23_gray_shadow"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/card_view_23_white_shadow"
                        android:fillViewport="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:layout_marginBottom="@dimen/_11sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_11sdp"
                                android:layout_marginEnd="@dimen/_11sdp"
                                android:orientation="horizontal">

                                <com.view.MTextView
                                    android:id="@+id/baseFareHTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/text23Pro_Dark"
                                    android:textSize="@dimen/_11ssp"
                                    app:customTypeFace="@string/system_semi_bold"
                                    tools:text="Rental Fare" />

                                <com.view.MTextView
                                    android:id="@+id/baseFareVTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/appThemeColor_1"
                                    android:textSize="@dimen/_11ssp"
                                    app:customTypeFace="@string/system_semi_bold"
                                    tools:text="#220.20" />

                            </LinearLayout>

                            <com.view.MTextView
                                android:id="@+id/baseFareInfotxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_11sdp"
                                android:layout_marginEnd="@dimen/_11sdp"
                                android:gravity="start"
                                android:maxLines="1"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Light"
                                android:textSize="@dimen/_9ssp"
                                app:customTypeFace="@string/system_regular" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_11sdp"
                                android:layout_marginBottom="@dimen/_11sdp"
                                android:background="@color/view23ProBG" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_11sdp"
                                android:layout_marginEnd="@dimen/_11sdp"
                                android:orientation="horizontal">

                                <com.view.MTextView
                                    android:id="@+id/addKMFareHTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/text23Pro_Dark"
                                    android:textFontWeight="1"
                                    android:textSize="@dimen/_11ssp"
                                    app:customTypeFace="@string/system_semi_bold"
                                    tools:text="Rental Fare" />

                                <com.view.MTextView
                                    android:id="@+id/addKMFareVTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/appThemeColor_1"
                                    android:textSize="@dimen/_11ssp"
                                    app:customTypeFace="@string/system_semi_bold"
                                    tools:text="#220.20" />


                            </LinearLayout>

                            <com.view.MTextView
                                android:id="@+id/addKmFareInfoTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_11sdp"
                                android:layout_marginEnd="@dimen/_11sdp"
                                android:gravity="start"
                                android:maxLines="1"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Light"
                                android:textSize="@dimen/_9ssp"
                                app:customTypeFace="@string/system_regular" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_11sdp"
                                android:layout_marginBottom="@dimen/_11sdp"
                                android:background="@color/view23ProBG" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_11sdp"
                                android:layout_marginEnd="@dimen/_11sdp"
                                android:orientation="horizontal">

                                <com.view.MTextView
                                    android:id="@+id/addTimeFareHTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:text="Rental Fare"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/text23Pro_Dark"
                                    android:textSize="@dimen/_11ssp"
                                    app:customTypeFace="@string/system_semi_bold" />

                                <com.view.MTextView
                                    android:id="@+id/addTimeFareVTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:text="#220.20"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/appThemeColor_1"
                                    android:textSize="@dimen/_11ssp"
                                    app:customTypeFace="@string/system_semi_bold" />

                            </LinearLayout>

                            <com.view.MTextView
                                android:id="@+id/addTimeFareInfoTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_11sdp"
                                android:layout_marginEnd="@dimen/_11sdp"
                                android:gravity="start"
                                android:maxLines="1"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Light"
                                android:textSize="@dimen/_9ssp"
                                app:customTypeFace="@string/system_regular" />

                            <View
                                android:id="@+id/rightSeperationLine"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="#BABABA"
                                android:visibility="gone" />

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:id="@+id/noteParentView"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp">

                    <com.view.MTextView
                        android:id="@+id/noteTitleTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="@string/app_name"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_semi_bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/card_view_23_gray_shadow"
                        android:orientation="vertical"
                        android:padding="@dimen/_11sdp">

                        <com.view.WKWebView
                            android:id="@+id/noteMsgTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_9sdp"
                            android:backgroundTint="@android:color/transparent"
                            android:gravity="start"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/textSub23Pro_gray"
                            android:textSize="@dimen/_9ssp"
                            app:customTypeFace="@string/system_regular" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>
</layout>
