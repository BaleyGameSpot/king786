<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/detailArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/nextDeliveryLocArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="match_parent"
                    android:minHeight="@dimen/_36sdp"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/mainLineTop"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/logoview"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:background="#C0C0C0"
                        android:visibility="visible" />

                    <FrameLayout
                        android:id="@+id/logoview"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_red_dot"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:gravity="center"
                            android:src="@drawable/round_shape_gray" />

                        <ImageView
                            android:id="@+id/iv_completed"
                            android:layout_width="@dimen/_36sdp"
                            android:layout_height="@dimen/_36sdp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:gravity="center"
                            app:tint="@color/appThemeColor_1"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_circular_shape" />

                        <com.view.MTextView
                            android:id="@+id/riderSeqNumber"
                            android:layout_width="@dimen/_36sdp"
                            android:layout_height="@dimen/_36sdp"
                            android:layout_gravity="center|bottom"
                            android:gravity="center"
                            android:textColor="#141414"
                            android:textSize="@dimen/_16ssp"
                            app:customTypeFace="@string/system_medium"

                            tools:text="1" />
                    </FrameLayout>
                </RelativeLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.view.MTextView
                        android:id="@+id/nextDeliveryLocTxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_19ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="NEXT Location" />


                    <com.view.MTextView
                        android:id="@+id/ricipientSignTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.45"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:minLines="2"
                        android:padding="@dimen/_4sdp"
                        android:text="View Signature"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="invisible"
                        app:customTypeFace="@string/system_medium" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <View

                        android:id="@+id/mainLine"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#C0C0C0" />

                    <LinearLayout
                        android:id="@+id/center_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            app:cardElevation="@dimen/_2sdp"
                            card_view:cardBackgroundColor="#ffffff"
                            card_view:cardCornerRadius="@dimen/_8sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_15sdp">

                                <LinearLayout
                                    android:id="@+id/main_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <com.view.MTextView
                                            android:id="@+id/recipientNoTxt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_15sdp"
                                            android:gravity="start|center"
                                            android:includeFontPadding="false"
                                            android:textColor="#141414"
                                            android:textSize="@dimen/_14ssp"
                                            android:typeface="normal"
                                            app:customTypeFace="@string/system_semi_bold"
                                            tools:text="Passenger" />

                                        <LinearLayout
                                            android:id="@+id/arrowArea"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginEnd="@dimen/_15sdp"
                                            android:gravity="center">

                                            <ImageView
                                                android:id="@+id/img_arrow"
                                                android:layout_width="@dimen/_15sdp"
                                                android:layout_height="@dimen/_15sdp"
                                                app:srcCompat="@drawable/ic_arrow_point_to_down" />
                                        </LinearLayout>

                                    </RelativeLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:orientation="vertical">

                                        <com.view.MTextView
                                            android:id="@+id/recipientNameTxt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="3dp"
                                            android:padding="5dp"
                                            android:text="Jhon Mark"
                                            android:textAlignment="viewStart"
                                            android:textColor="@color/appThemeColor_1"
                                            android:textSize="@dimen/txt_size_14"
                                            android:typeface="normal"
                                            android:visibility="gone" />


                                        <com.view.MTextView
                                            android:id="@+id/totalSheetsTxt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="3dp"
                                            android:includeFontPadding="false"
                                            android:padding="5dp"
                                            android:textAlignment="viewStart"
                                            android:textColor="#7C7C7C"
                                            android:textSize="@dimen/_12ssp"
                                            app:customTypeFace="@string/system_light"
                                            tools:text="+86XXXXX" />

                                        <LinearLayout
                                            android:id="@+id/callMsgArea"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/_2sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_marginEnd="@dimen/_2sdp"
                                            android:layout_marginBottom="@dimen/_10ssp"
                                            android:animateLayoutChanges="true"
                                            android:gravity="center"
                                            android:orientation="horizontal"
                                            android:visibility="gone"
                                            tools:visibility="visible">


                                            <LinearLayout
                                                android:id="@+id/contactArea"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="start|center"
                                                android:gravity="start"
                                                android:orientation="horizontal"
                                                android:padding="@dimen/_5sdp">

                                                <ImageView
                                                    android:layout_width="@dimen/_20sdp"
                                                    android:layout_height="@dimen/_20sdp"
                                                    android:layout_gravity="center"
                                                    android:layout_marginStart="@dimen/_5sdp"
                                                    android:padding="@dimen/_1sdp"
                                                    app:tint="@color/appThemeColor_1"
                                                    app:srcCompat="@drawable/ic_phone_call_popup" />

                                                <com.view.MTextView
                                                    android:id="@+id/contactTxt"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="@dimen/_10sdp"
                                                    android:layout_marginEnd="@dimen/_10sdp"
                                                    android:gravity="start|center"
                                                    android:singleLine="true"
                                                    android:text="Call"
                                                    android:textAlignment="viewStart"
                                                    android:textAllCaps="true"
                                                    android:textColor="@color/appThemeColor_1"
                                                    android:textSize="@dimen/_13ssp"
                                                    app:customTypeFace="@string/system_regular" />


                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>


                                    <!--DropDown Layout-->
                                    <LinearLayout
                                        android:id="@+id/recipientDetailArea"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:animateLayoutChanges="true"
                                        android:orientation="vertical"
                                        android:visibility="gone"
                                        tools:visibility="visible">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_marginStart="@dimen/_5sdp"
                                            android:layout_marginEnd="@dimen/_5sdp"
                                            android:background="#DDDDDD" />

                                        <LinearLayout
                                            android:id="@+id/paymentModeArea"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:orientation="vertical">

                                            <com.view.MTextView
                                                android:id="@+id/paymentModeHtxt"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="top|center"
                                                android:layout_marginStart="@dimen/_5sdp"
                                                android:gravity="start|top|center_vertical"
                                                android:textAlignment="viewStart"
                                                android:textColor="#787878"
                                                android:textSize="@dimen/_11ssp"
                                                app:customTypeFace="@string/system_light"
                                                tools:text="Payment Mode" />

                                            <com.view.MTextView
                                                android:id="@+id/paymentModeVtxt"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="top|center"
                                                android:layout_marginStart="@dimen/_5sdp"
                                                android:layout_marginTop="@dimen/_2sdp"
                                                android:gravity="start|top|center_vertical"
                                                android:textAlignment="viewStart"
                                                android:textColor="#787878"
                                                android:textSize="@dimen/_11ssp"
                                                app:customTypeFace="@string/system_light"
                                                tools:text="Cash" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/AmountArea"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_7sdp"
                                            android:orientation="vertical">

                                            <com.view.MTextView
                                                android:id="@+id/AmountHtxt"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="top|center"
                                                android:layout_marginStart="@dimen/_5sdp"
                                                android:gravity="start|top|center_vertical"
                                                android:textAlignment="viewStart"
                                                android:textColor="#787878"
                                                android:textSize="@dimen/_11ssp"
                                                app:customTypeFace="@string/system_light"
                                                tools:text="Amount" />

                                            <com.view.MTextView
                                                android:id="@+id/AmountVtxt"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="top|center"
                                                android:layout_marginStart="@dimen/_5sdp"
                                                android:layout_marginTop="@dimen/_2sdp"
                                                android:gravity="start|top|center_vertical"
                                                android:textAlignment="viewStart"
                                                android:textColor="#787878"
                                                android:textSize="@dimen/_11ssp"
                                                app:customTypeFace="@string/system_light"
                                                tools:text="$ 20" />
                                        </LinearLayout>

                                    </LinearLayout>
                                </LinearLayout>




                                <View
                                    android:id="@+id/contactVerLine"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#DDDDDD"
                                    android:visibility="gone"
                                    tools:visibility="visible" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</layout>