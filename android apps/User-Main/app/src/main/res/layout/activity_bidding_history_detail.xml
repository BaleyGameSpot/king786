                                    android:textAllCaps="true"
                                    android:textColor="@color/text23Pro_Dark"
                                    android:textSize="@dimen/txt_size_15"
                                    android:textStyle="bold"
                                    app:customTypeFace="@string/system_semi_bold" />

                                <com.view.MTextView
                                    android:id="@+id/recipientTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start|center_vertical"
                                    android:maxLines="1"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/_11ssp"
                                    android:visibility="gone"
                                    app:customTypeFace="@string/system_regular" />

                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/helpTxt"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/appThemeColor_1"
                                android:gravity="end|center|top"
                                android:visibility="visible"
                                app:srcCompat="@drawable/ic_help" />


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/tripStatusArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:elevation="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_20sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:visibility="visible">


                        <com.view.MTextView
                            android:id="@+id/tripStatusTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_11sdp"
                            android:background="@drawable/border_fill"
                            android:gravity="center"
                            android:maxLines="2"
                            android:minLines="1"
                            android:padding="@dimen/_10sdp"
                            android:text=""
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_medium" />


                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

        <ProgressBar

            android:id="@+id/loading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

    </RelativeLayout>
</layout>
