<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/contentArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                app:srcCompat="@drawable/ic_timer_2"
                app:tint="@color/text23Pro_Dark_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="@dimen/_9sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_9sdp"
                                android:layout_height="@dimen/_9sdp"
                                app:srcCompat="@drawable/round_shape"
                                app:tint="#008000" />

                            <com.view.DividerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layerType="software"
                                app:dividerColor="@color/view23ProBG"
                                app:dividerDashGap="4dp"
                                app:dividerDashLength="4dp"
                                app:dividerOrientation="vertical" />
                        </LinearLayout>
                        <com.view.MTextView
                            android:id="@+id/recentStartLocationTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewStart"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/text23Pro_Dark_1"
                            android:textSize="@dimen/_11ssp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="start location" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_9sdp"
                            android:layout_height="@dimen/_9sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            app:srcCompat="@drawable/round_shape"
                            app:tint="#CA3939" />
                        <com.view.MTextView
                            android:id="@+id/recentEndLocationTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text23Pro_Dark_1"
                            android:textSize="@dimen/_11ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="end location dfsdfsdf dfsdfd etr" />
                    </LinearLayout>

                </LinearLayout>

                <com.view.MTextView
                    android:id="@+id/recentLocationSubTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="#939498"
                    android:textSize="@dimen/_11ssp"
                    app:customTypeFace="@string/system_regular"
                    tools:text="tomorrow" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivDirectionArrow"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                app:srcCompat="@drawable/ic_arrow_1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#E5E5E6" />
    </LinearLayout>
</layout>